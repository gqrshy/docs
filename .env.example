# MongoDB Atlas connection string
# Get this from MongoDB Atlas dashboard > Database > Connect > Drivers
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority

# Database name (optional, defaults to 'cobbleranked_api')
MONGODB_DB=cobbleranked_api

# API Key for CobbleRanked server authentication (optional)
# If set, CobbleRanked server must send this key in X-API-Key header
COBBLERANKED_API_KEY=your-secret-api-key-here
