---
// Products section showcasing mods - PolarCub-inspired right-aligned layout
---

<section id="products" class="products-section">
	<div class="products-container">
		<!-- Header: Right-aligned like ContactSection -->
		<div class="products-header">
			<h2 class="products-title">
				<span data-i18n="productsTitle">Our Products</span><span class="title-marks">!!</span>
			</h2>
			<p class="products-subtitle" data-i18n="productsSubtitle">
				Mods and libraries for <span class="highlight">Cobblemon</span>
			</p>
		</div>

		<div class="products-grid">
			<a href="/docs/cobbleranked/" class="product-card featured">
				<div class="product-icon">
					<img src="/cobbleranked.png" alt="CobbleRanked" />
				</div>
				<div class="product-info">
					<h3>CobbleRanked</h3>
					<p data-i18n="cobblerankedDesc">ELO-based ranked battle system with seasons, leaderboards, and rewards.</p>
					<span class="product-tag">Featured</span>
				</div>
			</a>

			<a href="/docs/gashilibs/" class="product-card">
				<div class="product-icon library">
					<svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
					</svg>
				</div>
				<div class="product-info">
					<h3>GashiLibs</h3>
					<p data-i18n="gashilibsDesc">Shared library providing database connections, Redis, and config utilities.</p>
					<span class="product-tag library">Library</span>
				</div>
			</a>

			<a href="/docs/maillib/" class="product-card">
				<div class="product-icon library">
					<svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
						<path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
					</svg>
				</div>
				<div class="product-info">
					<h3>MailLib</h3>
					<p data-i18n="maillibDesc">In-game mailbox system for delivering rewards and items to players.</p>
					<span class="product-tag library">Library</span>
				</div>
			</a>
		</div>
	</div>
</section>

<script is:inline>
(function() {
	const translations = {
		en: {
			productsTitle: "Our Products",
			productsSubtitle: "Mods and libraries for <span class=\"highlight\">Cobblemon</span>",
			cobblerankedDesc: "ELO-based ranked battle system with seasons, leaderboards, and rewards.",
			gashilibsDesc: "Shared library providing database connections, Redis, and config utilities.",
			maillibDesc: "In-game mailbox system for delivering rewards and items to players."
		},
		ja: {
			productsTitle: "プロダクト",
			productsSubtitle: "<span class=\"highlight\">Cobblemon</span>向けMod・ライブラリ",
			cobblerankedDesc: "ELOレーティングを採用したランクバトルシステム。シーズン、リーダーボード、報酬機能を搭載。",
			gashilibsDesc: "データベース接続、Redis、設定管理などの共有ライブラリ。",
			maillibDesc: "プレイヤーに報酬やアイテムを届けるゲーム内メールシステム。"
		}
	};

	function applyProductsTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.products-section [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) {
				el.innerHTML = t[key];
			}
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyProductsTranslations(lang);
	}

	window.addEventListener('langChange', (e) => {
		applyProductsTranslations(e.detail.lang);
	});

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
.products-section {
	padding: 5rem 2rem 6rem;
	background: transparent;
}

.products-container {
	max-width: 1100px;
	margin: 0 auto;
}

/* ===== Header - Right-aligned like ContactSection ===== */
.products-header {
	text-align: right;
	margin-bottom: 2.5rem;
}

.products-title {
	font-family: 'Lilita One', 'Inter', sans-serif;
	font-size: 4rem;
	font-weight: 400;
	color: #454141;
	margin: 0 0 12px;
	line-height: 1.1;
}

.title-marks {
	color: #ff4080;
}

.products-subtitle {
	font-size: 1.1rem;
	color: #5a5a6a;
	margin: 0;
	line-height: 1.7;
}

.highlight {
	color: #ff4080;
	text-decoration: underline;
	text-decoration-style: wavy;
	text-underline-offset: 3px;
}

/* ===== Product Grid Styles ===== */
.products-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
	gap: 1.25rem;
}

/* Frosted glass card - matching Footer style */
.product-card {
	background: linear-gradient(
		180deg,
		rgba(200, 195, 225, 0.55) 0%,
		rgba(195, 190, 220, 0.6) 100%
	);
	backdrop-filter: blur(40px) saturate(1.2);
	-webkit-backdrop-filter: blur(40px) saturate(1.2);
	border: 1px solid rgba(255, 255, 255, 0.35);
	border-radius: 20px;
	padding: 1.75rem;
	text-decoration: none;
	transition: background 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
	display: flex;
	gap: 1.25rem;
	align-items: flex-start;
	box-shadow:
		0 8px 32px rgba(140, 120, 180, 0.12),
		inset 0 1px 0 rgba(255, 255, 255, 0.4);
	transform-style: preserve-3d;
	transform-origin: center bottom;
	animation: cardLiftOut 0.5s ease forwards;
}

.product-card:hover {
	box-shadow:
		0 25px 60px rgba(140, 120, 180, 0.3),
		inset 0 1px 0 rgba(255, 255, 255, 0.5);
	background: linear-gradient(
		180deg,
		rgba(210, 205, 235, 0.65) 0%,
		rgba(205, 200, 230, 0.7) 100%
	);
	animation: cardLiftIn 0.45s ease forwards;
}

.product-card.featured {
	background: linear-gradient(
		180deg,
		rgba(210, 200, 235, 0.6) 0%,
		rgba(200, 195, 225, 0.65) 100%
	);
	border-color: rgba(255, 255, 255, 0.45);
}

.product-icon {
	flex-shrink: 0;
	width: 72px;
	height: 72px;
	border-radius: 14px;
	overflow: hidden;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 4px 16px rgba(124, 108, 154, 0.2);
}

.product-icon img {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.product-icon.library {
	background: rgba(255, 255, 255, 0.5);
	color: #7c6c9a;
}

.product-icon.library svg {
	width: 32px;
	height: 32px;
}

.product-info h3 {
	font-size: 1.15rem;
	font-weight: 600;
	color: #454141;
	margin-bottom: 0.4rem;
}

.product-info p {
	color: #5a5a6a;
	font-size: 0.875rem;
	line-height: 1.6;
	margin-bottom: 0.875rem;
}

.product-tag {
	display: inline-block;
	background: linear-gradient(135deg, #ff4080 0%, #ff6090 100%);
	color: #fff;
	font-size: 0.7rem;
	font-weight: 600;
	padding: 0.3rem 0.875rem;
	border-radius: 20px;
	box-shadow: 0 2px 8px rgba(255, 64, 128, 0.3);
}

.product-tag.library {
	background: rgba(255, 255, 255, 0.6);
	color: #6b5b7a;
	box-shadow: none;
}

/* ===== Responsive ===== */
@media (max-width: 900px) {
	.products-header {
		text-align: center;
	}

	.products-title {
		font-size: 3rem;
	}

	.products-grid {
		grid-template-columns: 1fr;
		max-width: 450px;
		margin: 0 auto;
	}
}

@media (max-width: 600px) {
	.products-section {
		padding: 3rem 1rem 4rem;
	}

	.products-title {
		font-size: 2.5rem;
	}

	.products-subtitle {
		font-size: 1rem;
	}

	.product-card {
		padding: 1.5rem;
		border-radius: 16px;
	}

	.product-icon {
		width: 60px;
		height: 60px;
		border-radius: 12px;
	}

	.product-info h3 {
		font-size: 1.05rem;
	}

	.product-info p {
		font-size: 0.85rem;
	}
}
</style>
