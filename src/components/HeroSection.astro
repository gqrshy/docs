<script is:inline>
(function() {
	const translations = {
		en: {
			greeting: "Hey there, I'm",
			bio: "Minecraft Mod Developer.<br />Creating high-quality mods for Cobblemon.<br />Contact via <code>@gashicha</code>.",
			labelSkills: "Skills",
			labelTools: "Design Tools",
			labelFields: "Fields",
			fieldsContent: "Game Design, UI Design, UI Animation, Web Frontend",
			joinDiscord: "Join Discord",
			viewDocs: "View Documents"
		},
		ja: {
			greeting: "こんにちは！",
			bio: "Minecraft Mod開発者。<br />Cobblemon向けの高品質なModを制作しています。<br />お問い合わせは <code>@gashicha</code> まで。",
			labelSkills: "使用する技術",
			labelTools: "デザインツール",
			labelFields: "扱う分野",
			fieldsContent: "ゲームデザイン、UIデザイン、UIアニメーション、Webフロントエンド",
			joinDiscord: "Discordに参加",
			viewDocs: "ドキュメントを見る"
		}
	};

	function applyHeroTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.hero-section [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) {
				el.innerHTML = t[key];
			}
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyHeroTranslations(lang);
	}

	window.addEventListener('langChange', (e) => {
		applyHeroTranslations(e.detail.lang);
	});

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
.hero-section {
	min-height: 100vh;
	display: flex;
	align-items: center;
	padding: 8rem 2rem 5rem;
	background: #0f0a1a;
}

.hero-container {
	max-width: 900px;
	margin: 0 auto;
	display: grid;
	grid-template-columns: 280px 1fr;
	gap: 4rem;
	align-items: start;
}

/* Left side - Avatar & Intro */
.hero-left {
	display: flex;
	flex-direction: column;
}

.avatar-wrapper {
	width: 100px;
	height: 100px;
	border-radius: 50%;
	overflow: hidden;
	margin-bottom: 1.25rem;
	border: 2px solid rgba(124, 58, 237, 0.3);
}

.avatar {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.intro-text {
	margin-bottom: 1rem;
}

.greeting {
	color: rgba(255, 255, 255, 0.5);
	font-size: 0.875rem;
	margin-bottom: 0.25rem;
	font-weight: 400;
}

.name {
	font-size: 2.5rem;
	font-weight: 700;
	color: #fff;
	margin: 0 0 0.25rem 0;
	letter-spacing: -0.03em;
	background: linear-gradient(135deg, #fff 0%, #a78bfa 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
}

.handle {
	font-size: 0.875rem;
	color: rgba(255, 255, 255, 0.4);
}

.bio {
	font-size: 0.8125rem;
	line-height: 1.9;
	color: rgba(255, 255, 255, 0.6);
	margin-bottom: 1.5rem;
}

.bio code {
	background: rgba(124, 58, 237, 0.2);
	padding: 0.125rem 0.375rem;
	border-radius: 4px;
	color: #a78bfa;
	font-size: 0.75rem;
}

.social-icons {
	display: flex;
	gap: 0.75rem;
}

.social-icons a {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 32px;
	height: 32px;
	color: rgba(255, 255, 255, 0.4);
	transition: color 0.2s ease;
}

.social-icons a:hover {
	color: #fff;
}

/* Right side - Info rows */
.hero-right {
	display: flex;
	flex-direction: column;
	gap: 1.5rem;
	padding-top: 0.25rem;
}

.info-row {
	display: flex;
	flex-direction: column;
	gap: 0.375rem;
}

.info-label {
	font-size: 0.6875rem;
	font-weight: 600;
	color: rgba(255, 255, 255, 0.35);
	text-transform: uppercase;
	letter-spacing: 0.08em;
}

.info-content {
	font-size: 0.875rem;
	color: rgba(255, 255, 255, 0.75);
	line-height: 1.5;
}

.info-highlight {
	color: #a78bfa;
	font-weight: 500;
}

/* Buttons */
.hero-buttons {
	display: flex;
	gap: 0.75rem;
	margin-top: 0.5rem;
}

.btn-discord {
	display: flex;
	align-items: center;
	gap: 0.5rem;
	background: #5865F2;
	color: #fff;
	padding: 0.625rem 1rem;
	border-radius: 8px;
	text-decoration: none;
	font-weight: 500;
	font-size: 0.8125rem;
	transition: all 0.2s ease;
}

.btn-discord:hover {
	background: #4752C4;
	transform: translateY(-2px);
}

.btn-docs {
	display: flex;
	align-items: center;
	background: transparent;
	color: rgba(255, 255, 255, 0.8);
	padding: 0.625rem 1rem;
	border-radius: 8px;
	text-decoration: none;
	font-weight: 500;
	font-size: 0.8125rem;
	border: 1px solid rgba(255, 255, 255, 0.15);
	transition: all 0.2s ease;
}

.btn-docs:hover {
	border-color: rgba(124, 58, 237, 0.5);
	background: rgba(124, 58, 237, 0.1);
	transform: translateY(-2px);
}

@media (max-width: 768px) {
	.hero-section {
		padding: 6rem 1.5rem 4rem;
	}

	.hero-container {
		grid-template-columns: 1fr;
		gap: 2.5rem;
	}

	.hero-left {
		align-items: center;
		text-align: center;
	}

	.social-icons {
		justify-content: center;
	}

	.hero-buttons {
		justify-content: center;
		flex-wrap: wrap;
	}

	.name {
		font-size: 2rem;
	}
}

@media (max-width: 480px) {
	.hero-buttons {
		flex-direction: column;
		width: 100%;
	}

	.btn-discord,
	.btn-docs {
		justify-content: center;
	}
}
</style>
