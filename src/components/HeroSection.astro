<script is:inline>
(function() {
	const translations = {
		en: {
			greeting: "Hey there, I'm",
			bio: "Minecraft Mod Developer.<br />Creating high-quality mods for Cobblemon.<br />Contact via <code>@gashicha</code>.",
			labelSkills: "Skills",
			labelTools: "Design Tools",
			labelFields: "Fields",
			fieldsContent: "Game Design, UI Design, UI Animation, Web Frontend",
			linksDev: "Development",
			linksHobby: "Hobbies",
			linksGaming: "Gaming",
			joinDiscord: "Join Discord",
			viewDocs: "View Documents"
		},
		ja: {
			greeting: "こんにちは！",
			bio: "Minecraft Mod開発者。<br />Cobblemon向けの高品質なModを制作しています。<br />お問い合わせは <code>@gashicha</code> まで。",
			labelSkills: "使用する技術",
			labelTools: "デザインツール",
			labelFields: "扱う分野",
			fieldsContent: "ゲームデザイン、UIデザイン、UIアニメーション、Webフロントエンド",
			linksDev: "開発系",
			linksHobby: "趣味",
			linksGaming: "ゲーム",
			joinDiscord: "Discordに参加",
			viewDocs: "ドキュメントを見る"
		}
	};

	function applyHeroTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.hero-section [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) {
				el.innerHTML = t[key];
			}
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyHeroTranslations(lang);
	}

	window.addEventListener('langChange', (e) => {
		applyHeroTranslations(e.detail.lang);
	});

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
.hero-section {
	min-height: 100vh;
	display: grid;
	grid-template-columns: 1fr minmax(auto, 900px) 1fr;
	align-items: center;
	padding: 6rem 1rem;
	background: #0f0a1a;
	overflow: hidden;
	position: relative;
}

/* Decorative Grid Containers */
.deco-grid {
	display: flex;
	flex-direction: column;
	gap: 1rem;
	padding: 2rem;
	opacity: 0.4;
}

.deco-left {
	align-items: flex-end;
}

.deco-right {
	align-items: flex-start;
}

/* Decorative Box Base */
.deco-box {
	background: rgba(255, 255, 255, 0.03);
	border: 1px solid rgba(255, 255, 255, 0.06);
	border-radius: 12px;
	padding: 1rem 1.5rem;
	color: rgba(255, 255, 255, 0.5);
	font-size: 0.75rem;
	font-weight: 600;
	letter-spacing: 0.1em;
	transition: all 0.3s ease;
}

.deco-box:hover {
	background: rgba(255, 255, 255, 0.06);
	border-color: rgba(124, 58, 237, 0.3);
	opacity: 1;
	transform: translateY(-2px);
}

/* Text Boxes */
.deco-text {
	font-family: 'Inter', monospace;
	animation: pulse 3s ease-in-out infinite;
}

.deco-text-jp {
	font-size: 1rem;
	animation: pulse 4s ease-in-out infinite 0.5s;
}

.deco-text-sm {
	font-size: 0.625rem;
	animation: pulse 3.5s ease-in-out infinite 1s;
}

.deco-brackets {
	font-family: 'JetBrains Mono', monospace;
	color: rgba(167, 139, 250, 0.6);
	animation: pulse 2.5s ease-in-out infinite;
}

/* Dots Animation */
.deco-dots {
	display: flex;
	gap: 0.5rem;
	padding: 1rem;
}

.deco-dots span {
	width: 8px;
	height: 8px;
	background: rgba(255, 255, 255, 0.4);
	border-radius: 50%;
	animation: bounce 1.4s ease-in-out infinite;
}

.deco-dots span:nth-child(2) { animation-delay: 0.2s; }
.deco-dots span:nth-child(3) { animation-delay: 0.4s; }

/* Icon Boxes */
.deco-icon {
	width: 60px;
	height: 60px;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 0;
}

.deco-icon svg {
	width: 24px;
	height: 24px;
	animation: spin 8s linear infinite;
}

.deco-play {
	width: 50px;
	height: 50px;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 0;
}

.deco-play svg {
	width: 16px;
	height: 16px;
	margin-left: 3px;
}

/* Curve SVG */
.deco-curve {
	padding: 0.75rem;
}

.deco-curve svg {
	width: 80px;
	height: 40px;
}

/* Loading Bars */
.deco-bars {
	display: flex;
	align-items: flex-end;
	gap: 4px;
	height: 40px;
	padding: 0.75rem;
}

.deco-bars span {
	width: 6px;
	background: rgba(124, 58, 237, 0.5);
	border-radius: 2px;
	animation: barPulse 1s ease-in-out infinite;
}

.deco-bars span:nth-child(1) { height: 60%; animation-delay: 0s; }
.deco-bars span:nth-child(2) { height: 100%; animation-delay: 0.15s; }
.deco-bars span:nth-child(3) { height: 40%; animation-delay: 0.3s; }
.deco-bars span:nth-child(4) { height: 80%; animation-delay: 0.45s; }

/* Cross */
.deco-cross {
	width: 40px;
	height: 40px;
	position: relative;
	padding: 0;
}

.deco-cross span {
	position: absolute;
	background: rgba(255, 255, 255, 0.3);
	top: 50%;
	left: 50%;
}

.deco-cross span:first-child {
	width: 20px;
	height: 2px;
	transform: translate(-50%, -50%);
}

.deco-cross span:last-child {
	width: 2px;
	height: 20px;
	transform: translate(-50%, -50%);
}

/* Spinner */
.deco-spinner {
	width: 50px;
	height: 50px;
	padding: 0;
	display: flex;
	align-items: center;
	justify-content: center;
}

.deco-spinner span {
	width: 24px;
	height: 24px;
	border: 2px solid rgba(255, 255, 255, 0.1);
	border-top-color: rgba(124, 58, 237, 0.6);
	border-radius: 50%;
	animation: spin 1s linear infinite;
}

/* Grid Dots */
.deco-grid-dots {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 6px;
	padding: 1rem;
	width: 60px;
	height: 60px;
}

.deco-grid-dots span {
	width: 6px;
	height: 6px;
	background: rgba(255, 255, 255, 0.3);
	border-radius: 50%;
	animation: dotPulse 2s ease-in-out infinite;
}

.deco-grid-dots span:nth-child(2) { animation-delay: 0.1s; }
.deco-grid-dots span:nth-child(3) { animation-delay: 0.2s; }
.deco-grid-dots span:nth-child(4) { animation-delay: 0.3s; }
.deco-grid-dots span:nth-child(5) { animation-delay: 0.4s; }
.deco-grid-dots span:nth-child(6) { animation-delay: 0.5s; }
.deco-grid-dots span:nth-child(7) { animation-delay: 0.6s; }
.deco-grid-dots span:nth-child(8) { animation-delay: 0.7s; }
.deco-grid-dots span:nth-child(9) { animation-delay: 0.8s; }

/* Diamond */
.deco-diamond {
	width: 50px;
	height: 50px;
	padding: 0;
	display: flex;
	align-items: center;
	justify-content: center;
}

.deco-diamond span {
	width: 16px;
	height: 16px;
	background: rgba(124, 58, 237, 0.4);
	transform: rotate(45deg);
	animation: diamondPulse 2s ease-in-out infinite;
}

/* Circle Outline */
.deco-circle-outline {
	width: 50px;
	height: 50px;
	padding: 0;
	border-radius: 50%;
	border: 2px solid rgba(255, 255, 255, 0.15);
	animation: pulse 3s ease-in-out infinite;
}

/* Wave */
.deco-wave {
	padding: 0.5rem;
}

.deco-wave svg {
	width: 60px;
	height: 20px;
	animation: waveMove 2s ease-in-out infinite;
}

/* Animations */
@keyframes pulse {
	0%, 100% { opacity: 0.4; }
	50% { opacity: 0.8; }
}

@keyframes bounce {
	0%, 80%, 100% { transform: translateY(0); }
	40% { transform: translateY(-8px); }
}

@keyframes spin {
	from { transform: rotate(0deg); }
	to { transform: rotate(360deg); }
}

@keyframes barPulse {
	0%, 100% { transform: scaleY(1); }
	50% { transform: scaleY(0.6); }
}

@keyframes dotPulse {
	0%, 100% { opacity: 0.3; transform: scale(1); }
	50% { opacity: 0.8; transform: scale(1.2); }
}

@keyframes diamondPulse {
	0%, 100% { transform: rotate(45deg) scale(1); }
	50% { transform: rotate(45deg) scale(1.1); }
}

@keyframes waveMove {
	0%, 100% { transform: translateX(0); }
	50% { transform: translateX(5px); }
}

/* Main Content */
.hero-main {
