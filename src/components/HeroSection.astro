<script is:inline>
(function() {
	const translations = {
		en: {
			greeting: "Hey there!",
			bio: "AKA Gqrshy! I'm a Minecraft Mod Developer from Japan!",
			joinDiscord: "join discord!",
			viewDocs: "see my mods!"
		},
		ja: {
			greeting: "こんにちは！",
			bio: "Gqrshyです！日本のMinecraft Mod開発者です！",
			joinDiscord: "discordに参加！",
			viewDocs: "Modを見る！"
		}
	};

	function applyHeroTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.hero-section [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) el.innerHTML = t[key];
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyHeroTranslations(lang);
	}

	window.addEventListener('langChange', (e) => applyHeroTranslations(e.detail.lang));
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}

	// PolarCub-style spring parallax - bouncy jelly effect on both acrylic panels
	// スクロール方向と逆に動く（下にスクロール→パネルは上に動く）
	function initParallax() {
		const mainPanel = document.getElementById('acrylic-main');
		const subPanel = document.getElementById('acrylic-sub');
		if (!mainPanel && !subPanel) return;

		// Panel configurations (different speeds for depth effect)
		const panels = [
			{ el: mainPanel, baseRotate: 4, yMultiplier: -0.08, rotateMultiplier: 1.5 },
			{ el: subPanel, baseRotate: -2, yMultiplier: -0.12, rotateMultiplier: 1.0 }
		].filter(p => p.el);

		// Spring state for each panel
		const states = panels.map(p => ({
			currentY: 0,
			currentRotate: p.baseRotate,
			targetY: 0,
			targetRotate: p.baseRotate,
			velocityY: 0,
			velocityRotate: 0
		}));

		let isAnimating = false;

		// Spring physics constants
		const mass = 1.2;
		const tension = 100;
		const friction = 12;

		function springStep(current, target, velocity) {
			const displacement = current - target;
			const springForce = -tension * displacement;
			const dampingForce = -friction * velocity;
			const acceleration = (springForce + dampingForce) / mass;
			const dt = 1 / 60;
			return {
				position: current + (velocity + acceleration * dt) * dt,
				velocity: velocity + acceleration * dt
			};
		}

		function animate() {
			let stillMoving = false;

			panels.forEach((panel, i) => {
				const state = states[i];

				// Update Y with spring
				const yResult = springStep(state.currentY, state.targetY, state.velocityY);
