---
// Hero section - Cute & Playful design inspired by Gengar
import gashiAvatar from '../assets/gashi.png';
import polymartLogo from '../assets/polymart.png';
---

<section class="hero-section" id="hero">
	<!-- Floating Blob Decorations - Overflow viewport for cohesive feel -->
	<div class="blob blob-1"></div>
	<div class="blob blob-2"></div>
	<div class="blob blob-3"></div>
	<div class="blob blob-4"></div>
	<div class="blob blob-5"></div>
	<div class="blob blob-6"></div>

	<!-- Small floating shapes -->
	<div class="shape shape-star shape-1">★</div>
	<div class="shape shape-star shape-2">★</div>
	<div class="shape shape-circle shape-3"></div>
	<div class="shape shape-circle shape-4"></div>
	<div class="shape shape-dot shape-5"></div>
	<div class="shape shape-dot shape-6"></div>
	<div class="shape shape-ring shape-7"></div>

	<!-- Main Content -->
	<div class="hero-content">
		<div class="hero-text">
			<p class="greeting" data-i18n="greeting">Hey there! I'm</p>
			<h1 class="name">
				<span class="name-char" style="--i: 0">G</span>
				<span class="name-char" style="--i: 1">a</span>
				<span class="name-char" style="--i: 2">s</span>
				<span class="name-char" style="--i: 3">h</span>
				<span class="name-char" style="--i: 4">i</span>
				<span class="name-char" style="--i: 5">!</span>
			</h1>
			<p class="bio" data-i18n="bio">
				Minecraft Mod Developer.<br />
				Creating high-quality mods for Cobblemon.<br />
				Contact via <code>@gashicha</code>
			</p>

			<div class="hero-buttons">
				<a href="https://discord.gg/VVVvBTqqyP" target="_blank" class="btn btn-primary">
					<svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
						<path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
					</svg>
					<span data-i18n="joinDiscord">Join Discord!</span>
				</a>
				<a href="/docs/cobbleranked/" class="btn btn-secondary">
					<span data-i18n="viewDocs">View Docs</span>
				</a>
			</div>
		</div>

		<div class="hero-visual">
			<div class="avatar-container">
				<div class="avatar-glow"></div>
				<div class="avatar-wrapper">
					<img src={gashiAvatar.src} alt="Gashi" class="avatar" />
				</div>
				<div class="avatar-ring"></div>
			</div>

			<!-- Info cards floating around avatar -->
			<div class="info-card card-skills">
				<span class="card-label" data-i18n="labelSkills">Skills</span>
				<span class="card-content">Java, Kotlin, TypeScript</span>
			</div>
			<div class="info-card card-tools">
				<span class="card-label" data-i18n="labelTools">Tools</span>
				<span class="card-content">Figma, Illustrator</span>
			</div>
			<div class="info-card card-field">
				<span class="card-label" data-i18n="labelFields">Fields</span>
				<span class="card-content" data-i18n="fieldsContent">Game & UI Design</span>
			</div>
		</div>
	</div>

	<!-- Social Links -->
	<div class="social-bar">
		<a href="https://github.com/gqrshy" target="_blank" rel="noopener noreferrer" title="GitHub" class="social-link">
			<img src="https://cdn.simpleicons.org/github/6b5b95" alt="GitHub" />
		</a>
		<a href="https://modrinth.com/user/gashicha" target="_blank" rel="noopener noreferrer" title="Modrinth" class="social-link">
			<img src="https://cdn.simpleicons.org/modrinth/1bd96a" alt="Modrinth" />
		</a>
		<a href="https://www.curseforge.com/members/gqrshy/projects" target="_blank" rel="noopener noreferrer" title="CurseForge" class="social-link">
			<img src="https://cdn.simpleicons.org/curseforge/f16436" alt="CurseForge" />
		</a>
		<a href="https://polymart.org/user/47282/gashi" target="_blank" rel="noopener noreferrer" title="Polymart" class="social-link">
			<img src={polymartLogo.src} alt="Polymart" />
		</a>
		<a href="https://www.youtube.com/@Gqrshy" target="_blank" rel="noopener noreferrer" title="YouTube" class="social-link">
			<img src="https://cdn.simpleicons.org/youtube/ff6b6b" alt="YouTube" />
		</a>
		<a href="https://x.com/Gqrshy" target="_blank" rel="noopener noreferrer" title="X" class="social-link">
			<img src="https://cdn.simpleicons.org/x/6b5b95" alt="X" />
		</a>
	</div>
</section>

<script is:inline>
(function() {
	const translations = {
		en: {
			greeting: "Hey there! I'm",
			bio: "Minecraft Mod Developer.<br />Creating high-quality mods for Cobblemon.<br />Contact via <code>@gashicha</code>",
			labelSkills: "Skills",
			labelTools: "Tools",
			labelFields: "Fields",
			fieldsContent: "Game & UI Design",
			joinDiscord: "Join Discord!",
			viewDocs: "View Docs"
		},
		ja: {
			greeting: "こんにちは！",
			bio: "Minecraft Mod開発者です。<br />Cobblemon向けの高品質なModを制作しています。<br />お問い合わせは <code>@gashicha</code> まで",
			labelSkills: "スキル",
			labelTools: "ツール",
			labelFields: "分野",
			fieldsContent: "ゲーム & UIデザイン",
			joinDiscord: "Discordに参加！",
			viewDocs: "ドキュメント"
		}
	};

	function applyHeroTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.hero-section [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) el.innerHTML = t[key];
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyHeroTranslations(lang);
	}

	window.addEventListener('langChange', (e) => applyHeroTranslations(e.detail.lang));

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
/* ===== Base Section ===== */
.hero-section {
	min-height: 100vh;
	background: linear-gradient(135deg, #e8e0f0 0%, #d4c8e8 50%, #c8d4f0 100%);
	position: relative;
	overflow: hidden;
	display: flex;
	flex-direction: column;
	justify-content: center;
	padding: 6rem 2rem 2rem;
}

/* ===== Floating Blobs - Overflow viewport ===== */
.blob {
	position: absolute;
	border-radius: 50% 40% 60% 50% / 50% 60% 40% 50%;
	filter: blur(0px);
	z-index: 0;
}

.blob-1 {
	width: 400px;
	height: 400px;
	background: linear-gradient(135deg, #7c8cf0 0%, #6b7ce0 100%);
	top: -150px;
	right: -100px;
	animation: blobFloat1 8s ease-in-out infinite;
}

.blob-2 {
	width: 300px;
	height: 280px;
	background: linear-gradient(135deg, #f0a0b0 0%, #e090a0 100%);
	bottom: -80px;
	left: -100px;
	border-radius: 60% 40% 50% 60% / 40% 50% 60% 50%;
	animation: blobFloat2 10s ease-in-out infinite;
}

.blob-3 {
	width: 200px;
	height: 200px;
	background: linear-gradient(135deg, #a0b8f0 0%, #90a8e0 100%);
	top: 30%;
	left: -80px;
	animation: blobFloat3 7s ease-in-out infinite;
}

.blob-4 {
	width: 150px;
	height: 150px;
	background: linear-gradient(135deg, #c0a0e0 0%, #b090d0 100%);
	bottom: 20%;
	right: -50px;
	animation: blobFloat1 9s ease-in-out infinite reverse;
}

.blob-5 {
	width: 100px;
	height: 100px;
	background: linear-gradient(135deg, #f0c0d0 0%, #e0b0c0 100%);
	top: 60%;
	right: 10%;
	animation: blobFloat2 6s ease-in-out infinite;
}

.blob-6 {
	width: 80px;
	height: 80px;
	background: linear-gradient(135deg, #90c0f0 0%, #80b0e0 100%);
	top: 15%;
	left: 15%;
	animation: blobFloat3 8s ease-in-out infinite;
}

@keyframes blobFloat1 {
	0%, 100% { transform: translate(0, 0) rotate(0deg) scale(1); }
	33% { transform: translate(20px, -30px) rotate(5deg) scale(1.05); }
	66% { transform: translate(-10px, 20px) rotate(-5deg) scale(0.95); }
}

@keyframes blobFloat2 {
	0%, 100% { transform: translate(0, 0) rotate(0deg); }
	50% { transform: translate(30px, -20px) rotate(10deg); }
}

@keyframes blobFloat3 {
	0%, 100% { transform: translate(0, 0) scale(1); }
	50% { transform: translate(-20px, 30px) scale(1.1); }
}

/* ===== Small Floating Shapes ===== */
.shape {
	position: absolute;
	z-index: 1;
	pointer-events: none;
}

.shape-star {
	font-size: 1.5rem;
	color: #f0a0b0;
	animation: starTwinkle 3s ease-in-out infinite;
}

.shape-1 { top: 20%; left: 8%; animation-delay: 0s; }
.shape-2 { top: 70%; right: 15%; animation-delay: 1.5s; color: #a0b8f0; }

.shape-circle {
	width: 20px;
	height: 20px;
	background: #c0a0e0;
	border-radius: 50%;
	animation: floatBounce 4s ease-in-out infinite;
}

.shape-3 { top: 40%; right: 8%; animation-delay: 0.5s; }
.shape-4 { bottom: 30%; left: 12%; animation-delay: 2s; background: #90c0f0; }

.shape-dot {
	width: 12px;
	height: 12px;
	background: #f0c0d0;
	border-radius: 50%;
	animation: dotPulse 2s ease-in-out infinite;
}

.shape-5 { top: 25%; right: 25%; }
.shape-6 { bottom: 40%; left: 25%; animation-delay: 1s; background: #a0d0f0; }

.shape-ring {
	width: 40px;
	height: 40px;
	border: 4px solid #c0a0e0;
	border-radius: 50%;
	animation: ringRotate 6s linear infinite;
}

.shape-7 { top: 50%; left: 5%; }

@keyframes starTwinkle {
	0%, 100% { opacity: 0.6; transform: scale(1) rotate(0deg); }
	50% { opacity: 1; transform: scale(1.2) rotate(20deg); }
}

@keyframes floatBounce {
	0%, 100% { transform: translateY(0); }
	50% { transform: translateY(-15px); }
}

@keyframes dotPulse {
	0%, 100% { transform: scale(1); opacity: 0.7; }
	50% { transform: scale(1.3); opacity: 1; }
}

@keyframes ringRotate {
	from { transform: rotate(0deg); }
	to { transform: rotate(360deg); }
}

/* ===== Main Content ===== */
.hero-content {
	display: grid;
	grid-template-columns: 1fr 1fr;
	gap: 4rem;
	max-width: 1200px;
	margin: 0 auto;
	position: relative;
	z-index: 2;
	align-items: center;
}

/* ===== Text Section ===== */
.hero-text {
	animation: slideInLeft 0.8s ease-out;
}

@keyframes slideInLeft {
	from { opacity: 0; transform: translateX(-30px); }
	to { opacity: 1; transform: translateX(0); }
}

.greeting {
	font-size: 1.25rem;
	color: #6b5b7a;
	margin-bottom: 0.5rem;
	font-weight: 500;
}

.name {
	font-size: 4rem;
	font-weight: 800;
	margin: 0 0 1.5rem;
	display: flex;
	flex-wrap: wrap;
}

.name-char {
	display: inline-block;
	color: #4a4a5a;
	animation: charBounce 0.6s ease-out backwards;
	animation-delay: calc(var(--i) * 0.1s);
	transition: transform 0.2s, color 0.2s;
}

.name-char:hover {
	transform: translateY(-8px) scale(1.1);
	color: #7c6c9a;
}

@keyframes charBounce {
	0% { opacity: 0; transform: translateY(-50px) rotate(-10deg); }
	60% { transform: translateY(10px) rotate(5deg); }
	100% { opacity: 1; transform: translateY(0) rotate(0deg); }
}

.bio {
	font-size: 1.1rem;
	line-height: 1.8;
	color: #6b5b7a;
	margin-bottom: 2rem;
}

.bio code {
	background: rgba(124, 108, 154, 0.15);
	padding: 0.2rem 0.5rem;
	border-radius: 6px;
	color: #7c6c9a;
	font-weight: 600;
}

/* ===== Buttons ===== */
.hero-buttons {
	display: flex;
	gap: 1rem;
	flex-wrap: wrap;
}

.btn {
	display: inline-flex;
	align-items: center;
	gap: 0.5rem;
	padding: 0.875rem 1.5rem;
	border-radius: 50px;
	font-weight: 600;
	font-size: 1rem;
	text-decoration: none;
	transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
	border: 2px solid transparent;
}

.btn-primary {
	background: linear-gradient(135deg, #7c6c9a 0%, #6b5b8a 100%);
	color: #fff;
	box-shadow: 0 4px 15px rgba(124, 108, 154, 0.4);
}

.btn-primary:hover {
	transform: translateY(-3px) scale(1.02);
	box-shadow: 0 8px 25px rgba(124, 108, 154, 0.5);
}

.btn-secondary {
	background: rgba(255, 255, 255, 0.7);
	color: #6b5b7a;
	border-color: rgba(124, 108, 154, 0.3);
	backdrop-filter: blur(10px);
}

.btn-secondary:hover {
	background: rgba(255, 255, 255, 0.9);
	border-color: #7c6c9a;
	transform: translateY(-3px);
}

/* ===== Visual Section ===== */
.hero-visual {
	position: relative;
	display: flex;
	justify-content: center;
	align-items: center;
	min-height: 400px;
	animation: slideInRight 0.8s ease-out;
}

@keyframes slideInRight {
	from { opacity: 0; transform: translateX(30px); }
	to { opacity: 1; transform: translateX(0); }
}

.avatar-container {
	position: relative;
	width: 220px;
	height: 220px;
}

.avatar-glow {
	position: absolute;
	inset: -20px;
	background: radial-gradient(circle, rgba(124, 108, 154, 0.3) 0%, transparent 70%);
	border-radius: 50%;
	animation: glowPulse 3s ease-in-out infinite;
}

@keyframes glowPulse {
	0%, 100% { transform: scale(1); opacity: 0.5; }
	50% { transform: scale(1.1); opacity: 0.8; }
}

.avatar-wrapper {
	width: 100%;
	height: 100%;
	border-radius: 50%;
	overflow: hidden;
	border: 4px solid rgba(255, 255, 255, 0.8);
	box-shadow: 0 10px 40px rgba(124, 108, 154, 0.3);
	position: relative;
	z-index: 2;
}

.avatar {
	width: 100%;
	height: 100%;
	object-fit: cover;
	transition: transform 0.3s ease;
}

.avatar-wrapper:hover .avatar {
	transform: scale(1.1);
}

.avatar-ring {
	position: absolute;
	inset: -15px;
	border: 3px dashed rgba(124, 108, 154, 0.3);
	border-radius: 50%;
	animation: ringRotate 20s linear infinite;
}

/* ===== Info Cards ===== */
.info-card {
	position: absolute;
	background: rgba(255, 255, 255, 0.85);
	backdrop-filter: blur(10px);
	padding: 0.75rem 1.25rem;
	border-radius: 16px;
	box-shadow: 0 4px 20px rgba(124, 108, 154, 0.15);
	display: flex;
	flex-direction: column;
	gap: 0.25rem;
	animation: cardFloat 4s ease-in-out infinite;
	transition: transform 0.3s ease;
	z-index: 3;
}

.info-card:hover {
	transform: scale(1.05);
}

.card-label {
	font-size: 0.7rem;
	font-weight: 700;
	text-transform: uppercase;
	letter-spacing: 0.05em;
	color: #9a8ab0;
}

.card-content {
	font-size: 0.9rem;
	font-weight: 600;
	color: #5a4a6a;
}

.card-skills {
	top: 10%;
	right: 0;
	animation-delay: 0s;
}

.card-tools {
	bottom: 20%;
	right: 10%;
	animation-delay: 1s;
}

.card-field {
	bottom: 10%;
	left: 0;
	animation-delay: 2s;
}

@keyframes cardFloat {
	0%, 100% { transform: translateY(0); }
	50% { transform: translateY(-10px); }
}

/* ===== Social Bar ===== */
.social-bar {
	display: flex;
	justify-content: center;
	gap: 1rem;
	margin-top: 3rem;
	position: relative;
	z-index: 2;
	animation: fadeInUp 0.8s ease-out 0.5s backwards;
}

@keyframes fadeInUp {
	from { opacity: 0; transform: translateY(20px); }
	to { opacity: 1; transform: translateY(0); }
}

.social-link {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 48px;
	height: 48px;
	border-radius: 50%;
	background: rgba(255, 255, 255, 0.7);
	backdrop-filter: blur(10px);
	box-shadow: 0 2px 10px rgba(124, 108, 154, 0.15);
	transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.social-link:hover {
	transform: translateY(-5px) scale(1.1);
	background: rgba(255, 255, 255, 0.95);
	box-shadow: 0 8px 20px rgba(124, 108, 154, 0.25);
}

.social-link img {
	width: 22px;
	height: 22px;
	object-fit: contain;
}

/* ===== Responsive ===== */
@media (max-width: 900px) {
	.hero-content {
		grid-template-columns: 1fr;
		text-align: center;
		gap: 3rem;
	}

	.hero-text {
		order: 1;
	}

	.hero-visual {
		order: 0;
		min-height: 300px;
	}

	.name {
		justify-content: center;
		font-size: 3rem;
	}

	.hero-buttons {
		justify-content: center;
	}

	.info-card {
		display: none;
	}

	.blob-1 { width: 250px; height: 250px; top: -100px; right: -80px; }
	.blob-2 { width: 200px; height: 180px; bottom: -60px; left: -80px; }
	.blob-3 { display: none; }
	.blob-4 { display: none; }
}

@media (max-width: 600px) {
	.hero-section {
		padding: 5rem 1rem 2rem;
	}

	.name {
		font-size: 2.5rem;
	}

	.bio {
		font-size: 1rem;
	}

	.avatar-container {
		width: 160px;
		height: 160px;
	}

	.social-bar {
		flex-wrap: wrap;
	}

	.social-link {
		width: 42px;
		height: 42px;
	}

	.hero-buttons {
		flex-direction: column;
		align-items: center;
	}

	.btn {
		width: 100%;
		max-width: 250px;
		justify-content: center;
	}
}
</style>
