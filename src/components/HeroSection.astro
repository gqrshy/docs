---
// Hero section - yui540 inspired with animated decorations
import gashiAvatar from '../assets/gashi.png';
import polymartLogo from '../assets/polymart.png';
---

<section class="hero-section">
	<!-- Animated Decorative Elements - Left Side -->
	<div class="deco-grid deco-left">
		<div class="deco-box deco-typewriter" style="--delay: 0.1s">
			<span class="typewriter-text">LOADING</span>
		</div>
		<div class="deco-box deco-dots" style="--delay: 0.2s">
			<span></span><span></span><span></span>
		</div>
		<div class="deco-box deco-icon" style="--delay: 0.3s">
			<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<circle cx="12" cy="12" r="10"/>
				<path d="M12 6v6l4 2"/>
			</svg>
		</div>
		<div class="deco-box deco-play" style="--delay: 0.4s">
			<svg viewBox="0 0 24 24" fill="currentColor">
				<polygon points="5,3 19,12 5,21"/>
			</svg>
		</div>
		<div class="deco-box deco-japanese" style="--delay: 0.5s">
			<span class="char" style="--i: 0">あ</span>
			<span class="char" style="--i: 1">り</span>
			<span class="char" style="--i: 2">が</span>
			<span class="char" style="--i: 3">と</span>
			<span class="char" style="--i: 4">う</span>
		</div>
		<div class="deco-box deco-svg-line" style="--delay: 0.6s">
			<svg viewBox="0 0 100 50" fill="none" stroke="currentColor" stroke-width="2">
				<path class="draw-line" d="M10,40 Q30,10 50,25 T90,15"/>
			</svg>
		</div>
		<div class="deco-box deco-bars" style="--delay: 0.7s">
			<span></span><span></span><span></span><span></span><span></span>
		</div>
		<div class="deco-box deco-cross" style="--delay: 0.8s">
			<span></span><span></span>
		</div>
		<div class="deco-box deco-typewriter-sm" style="--delay: 0.9s">
			<span class="typewriter-text">CURVE</span>
		</div>
		<div class="deco-box deco-circle-pulse" style="--delay: 1.0s">
			<span></span>
		</div>
	</div>

	<!-- Main Content -->
	<div class="hero-main">
		<div class="hero-container">
			<!-- Left: Avatar & Intro -->
			<div class="hero-left">
				<div class="avatar-wrapper">
					<img src={gashiAvatar.src} alt="Gashi" class="avatar" />
				</div>
				<div class="intro-text">
					<p class="greeting" data-i18n="greeting">Hey there, I'm</p>
					<h1 class="name">
						<span class="name-char" style="--i: 0">G</span>
						<span class="name-char" style="--i: 1">a</span>
						<span class="name-char" style="--i: 2">s</span>
						<span class="name-char" style="--i: 3">h</span>
						<span class="name-char" style="--i: 4">i</span>
					</h1>
				</div>
				<p class="bio" data-i18n="bio">
					Minecraft Mod開発者。<br />
					Cobblemon向けの高品質なModを制作しています。<br />
					お問い合わせは <code>@gashicha</code> まで。
				</p>

				<!-- Social Links by Category -->
				<div class="links-by-category">
					<!-- Development -->
					<div class="link-category">
						<span class="category-label" data-i18n="linksDev">Development</span>
						<div class="link-row">
							<a href="https://github.com/gqrshy" target="_blank" rel="noopener noreferrer" title="GitHub" class="link-btn">
								<img src="https://cdn.simpleicons.org/github/white" alt="GitHub" />
							</a>
							<a href="https://modrinth.com/user/gashicha" target="_blank" rel="noopener noreferrer" title="Modrinth" class="link-btn">
								<img src="https://cdn.simpleicons.org/modrinth/1bd96a" alt="Modrinth" />
							</a>
							<a href="https://www.curseforge.com/members/gqrshy/projects" target="_blank" rel="noopener noreferrer" title="CurseForge" class="link-btn">
								<img src="https://cdn.simpleicons.org/curseforge/f16436" alt="CurseForge" />
							</a>
							<a href="https://polymart.org/user/47282/gashi" target="_blank" rel="noopener noreferrer" title="Polymart" class="link-btn">
								<img src={polymartLogo.src} alt="Polymart" />
							</a>
						</div>
					</div>

					<!-- Hobbies -->
					<div class="link-category">
						<span class="category-label" data-i18n="linksHobby">Hobbies</span>
						<div class="link-row">
							<a href="https://www.youtube.com/@Gqrshy" target="_blank" rel="noopener noreferrer" title="YouTube" class="link-btn">
								<img src="https://cdn.simpleicons.org/youtube/ff0000" alt="YouTube" />
							</a>
							<a href="https://x.com/Gqrshy" target="_blank" rel="noopener noreferrer" title="X" class="link-btn">
								<img src="https://cdn.simpleicons.org/x/white" alt="X" />
							</a>
							<a href="https://note.com/gashicha" target="_blank" rel="noopener noreferrer" title="note" class="link-btn">
								<img src="https://cdn.simpleicons.org/note/41c9b4" alt="note" />
							</a>
						</div>
					</div>

					<!-- Gaming -->
					<div class="link-category">
						<span class="category-label" data-i18n="linksGaming">Gaming</span>
						<div class="link-row">
							<a href="https://steamcommunity.com/profiles/76561199134198471/" target="_blank" rel="noopener noreferrer" title="Steam" class="link-btn">
								<img src="https://cdn.simpleicons.org/steam/white" alt="Steam" />
							</a>
							<a href="https://tracker.gg/valorant/profile/riot/%E5%B9%B3%E5%92%8C%E4%B8%BB%E7%BE%A9%E8%80%85%23peko/overview?platform=pc&playlist=competitive" target="_blank" rel="noopener noreferrer" title="Valorant" class="link-btn">
								<img src="https://cdn.simpleicons.org/valorant/ff4655" alt="Valorant" />
							</a>
							<a href="https://op.gg/ja/lol/summoners/jp/%E5%B9%B3%E5%92%8C%E4%B8%BB%E7%BE%A9%E8%80%85-peko" target="_blank" rel="noopener noreferrer" title="League of Legends" class="link-btn">
								<img src="https://cdn.simpleicons.org/leagueoflegends/c28f2c" alt="LoL" />
							</a>
						</div>
					</div>
				</div>
			</div>

			<!-- Right: Quick Info -->
			<div class="hero-right">
				<div class="info-row">
					<span class="info-label" data-i18n="labelSkills">Skills</span>
					<span class="info-content">Java, Kotlin, TypeScript, HTML, CSS, etc...</span>
				</div>
				<div class="info-row">
					<span class="info-label" data-i18n="labelTools">Design Tools</span>
					<span class="info-content">Figma, Adobe Illustrator, Adobe Photoshop, etc...</span>
				</div>
				<div class="info-row">
					<span class="info-label" data-i18n="labelFields">Fields</span>
					<span class="info-content" data-i18n="fieldsContent">Game Design, UI Design, UI Animation, Web Frontend</span>
				</div>
				<div class="info-row">
					<span class="info-label">MBTI</span>
					<span class="info-content info-highlight">ISFP</span>
				</div>
				<div class="hero-buttons">
					<a href="https://discord.gg/VVVvBTqqyP" target="_blank" class="btn-discord">
						<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
							<path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
						</svg>
						<span data-i18n="joinDiscord">Join Discord</span>
					</a>
					<a href="/docs/cobbleranked/" class="btn-docs">
						<span data-i18n="viewDocs">View Documents</span>
					</a>
				</div>
			</div>
		</div>
	</div>

	<!-- Animated Decorative Elements - Right Side -->
	<div class="deco-grid deco-right">
		<div class="deco-box deco-typewriter" style="--delay: 0.15s">
			<span class="typewriter-text">GASHI</span>
		</div>
		<div class="deco-box deco-spinner" style="--delay: 0.25s">
			<span></span>
		</div>
		<div class="deco-box deco-grid-dots" style="--delay: 0.35s">
			<span></span><span></span><span></span>
			<span></span><span></span><span></span>
			<span></span><span></span><span></span>
		</div>
		<div class="deco-box deco-diamond" style="--delay: 0.45s">
			<span></span>
		</div>
		<div class="deco-box deco-typewriter-sm" style="--delay: 0.55s">
			<span class="typewriter-text">COBBLEMON</span>
		</div>
		<div class="deco-box deco-x-marks" style="--delay: 0.65s">
			<span class="x-mark" style="--i: 0">×</span>
			<span class="x-mark" style="--i: 1">×</span>
			<span class="x-mark" style="--i: 2">×</span>
			<span class="x-mark" style="--i: 3">×</span>
		</div>
		<div class="deco-box deco-svg-wave" style="--delay: 0.75s">
			<svg viewBox="0 0 100 30" fill="none" stroke="currentColor" stroke-width="2">
				<path class="draw-line" d="M0,15 Q25,0 50,15 T100,15"/>
			</svg>
		</div>
		<div class="deco-box deco-brackets" style="--delay: 0.85s">
			<span class="bracket-char" style="--i: 0">{</span>
			<span class="bracket-char" style="--i: 1">.</span>
			<span class="bracket-char" style="--i: 2">.</span>
			<span class="bracket-char" style="--i: 3">.</span>
			<span class="bracket-char" style="--i: 4">}</span>
		</div>
		<div class="deco-box deco-progress" style="--delay: 0.95s">
			<div class="progress-bar"></div>
		</div>
		<div class="deco-box deco-squares" style="--delay: 1.05s">
			<span style="--i: 0"></span>
			<span style="--i: 1"></span>
			<span style="--i: 2"></span>
			<span style="--i: 3"></span>
		</div>
	</div>
</section>

<script is:inline>
(function() {
	const translations = {
		en: {
			greeting: "Hey there, I'm",
			bio: "Minecraft Mod Developer.<br />Creating high-quality mods for Cobblemon.<br />Contact via <code>@gashicha</code>.",
			labelSkills: "Skills",
			labelTools: "Design Tools",
			labelFields: "Fields",
			fieldsContent: "Game Design, UI Design, UI Animation, Web Frontend",
			linksDev: "Development",
			linksHobby: "Hobbies",
			linksGaming: "Gaming",
			joinDiscord: "Join Discord",
			viewDocs: "View Documents"
		},
		ja: {
			greeting: "こんにちは！",
			bio: "Minecraft Mod開発者。<br />Cobblemon向けの高品質なModを制作しています。<br />お問い合わせは <code>@gashicha</code> まで。",
			labelSkills: "使用する技術",
			labelTools: "デザインツール",
			labelFields: "扱う分野",
			fieldsContent: "ゲームデザイン、UIデザイン、UIアニメーション、Webフロントエンド",
			linksDev: "開発系",
			linksHobby: "趣味",
			linksGaming: "ゲーム",
			joinDiscord: "Discordに参加",
			viewDocs: "ドキュメントを見る"
		}
	};

	function applyHeroTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.hero-section [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) {
				el.innerHTML = t[key];
			}
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyHeroTranslations(lang);
	}

	window.addEventListener('langChange', (e) => {
		applyHeroTranslations(e.detail.lang);
	});

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
.hero-section {
	min-height: 100vh;
	display: grid;
	grid-template-columns: 1fr minmax(auto, 900px) 1fr;
	align-items: center;
	padding: 6rem 1rem;
	background: #0f0a1a;
	overflow: hidden;
	position: relative;
}

/* Decorative Grid Containers */
.deco-grid {
	display: flex;
	flex-direction: column;
	gap: 1rem;
	padding: 2rem;
}

.deco-left {
	align-items: flex-end;
}

.deco-right {
	align-items: flex-start;
}

/* Decorative Box Base with Staggered Appearance */
.deco-box {
	background: rgba(255, 255, 255, 0.03);
	border: 1px solid rgba(255, 255, 255, 0.06);
	border-radius: 12px;
	padding: 1rem 1.5rem;
	color: rgba(255, 255, 255, 0.5);
	font-size: 0.75rem;
	font-weight: 600;
	letter-spacing: 0.1em;
	transition: all 0.3s ease;
	opacity: 0;
	transform: translateY(20px);
	animation: fadeInUp 0.6s ease forwards;
	animation-delay: var(--delay, 0s);
}

.deco-box:hover {
	background: rgba(255, 255, 255, 0.08);
	border-color: rgba(124, 58, 237, 0.4);
	transform: translateY(-2px) scale(1.02);
}

@keyframes fadeInUp {
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

/* Typewriter Animation */
.deco-typewriter,
.deco-typewriter-sm {
	font-family: 'JetBrains Mono', 'Consolas', monospace;
	overflow: hidden;
}

.typewriter-text {
	display: inline-block;
	overflow: hidden;
	white-space: nowrap;
	border-right: 2px solid rgba(124, 58, 237, 0.8);
	animation:
		typing 2s steps(20) 1s forwards,
		blink 0.7s step-end infinite;
	width: 0;
}

.deco-typewriter-sm .typewriter-text {
	font-size: 0.625rem;
}

@keyframes typing {
	from { width: 0; }
	to { width: 100%; }
}

@keyframes blink {
	50% { border-color: transparent; }
}

/* Japanese Character Animation */
.deco-japanese {
	display: flex;
	gap: 2px;
	font-size: 1rem;
}

.deco-japanese .char {
	opacity: 0;
	transform: translateY(10px);
	animation: charAppear 0.4s ease forwards;
	animation-delay: calc(1.5s + var(--i) * 0.15s);
}

@keyframes charAppear {
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

/* SVG Line Drawing Animation */
.deco-svg-line,
.deco-svg-wave {
	padding: 0.75rem;
}

.deco-svg-line svg,
.deco-svg-wave svg {
	width: 80px;
	height: 40px;
}

.draw-line {
	stroke-dasharray: 200;
	stroke-dashoffset: 200;
	animation: drawLine 2s ease forwards 1.2s;
}

@keyframes drawLine {
	to {
		stroke-dashoffset: 0;
	}
}

/* Name Character Animation */
.name {
	font-size: 2.5rem;
	font-weight: 700;
	margin: 0;
	letter-spacing: -0.03em;
	display: flex;
}

.name-char {
	display: inline-block;
	background: linear-gradient(135deg, #fff 0%, #a78bfa 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
	opacity: 0;
	transform: translateY(20px) rotateX(-90deg);
	animation: nameAppear 0.5s ease forwards;
	animation-delay: calc(0.3s + var(--i) * 0.1s);
}

@keyframes nameAppear {
	to {
		opacity: 1;
		transform: translateY(0) rotateX(0);
	}
}

/* Dots Animation */
.deco-dots {
	display: flex;
	gap: 0.5rem;
	padding: 1rem;
}

.deco-dots span {
	width: 8px;
	height: 8px;
	background: rgba(255, 255, 255, 0.4);
	border-radius: 50%;
	animation: bounce 1.4s ease-in-out infinite;
}

.deco-dots span:nth-child(2) { animation-delay: 0.2s; }
.deco-dots span:nth-child(3) { animation-delay: 0.4s; }

@keyframes bounce {
	0%, 80%, 100% { transform: translateY(0); }
	40% { transform: translateY(-12px); }
}

/* Icon Boxes */
.deco-icon {
	width: 60px;
	height: 60px;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 0;
}

.deco-icon svg {
	width: 24px;
	height: 24px;
	animation: spin 8s linear infinite;
}

.deco-play {
	width: 50px;
	height: 50px;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 0;
}

.deco-play svg {
	width: 16px;
	height: 16px;
	margin-left: 3px;
	animation: pulse 2s ease-in-out infinite;
}

/* Loading Bars - Enhanced */
.deco-bars {
	display: flex;
	align-items: flex-end;
	gap: 3px;
	height: 45px;
	padding: 0.75rem;
}

.deco-bars span {
	width: 5px;
	background: linear-gradient(to top, rgba(124, 58, 237, 0.3), rgba(124, 58, 237, 0.8));
	border-radius: 2px;
	animation: barPulse 1.2s ease-in-out infinite;
	transform-origin: bottom;
}

.deco-bars span:nth-child(1) { height: 50%; animation-delay: 0s; }
.deco-bars span:nth-child(2) { height: 80%; animation-delay: 0.1s; }
.deco-bars span:nth-child(3) { height: 60%; animation-delay: 0.2s; }
.deco-bars span:nth-child(4) { height: 100%; animation-delay: 0.3s; }
.deco-bars span:nth-child(5) { height: 40%; animation-delay: 0.4s; }

@keyframes barPulse {
	0%, 100% { transform: scaleY(1); }
	50% { transform: scaleY(0.4); }
}

/* Cross */
.deco-cross {
	width: 40px;
	height: 40px;
	position: relative;
	padding: 0;
}

.deco-cross span {
	position: absolute;
	background: rgba(255, 255, 255, 0.3);
	top: 50%;
	left: 50%;
	transition: all 0.3s ease;
}

.deco-cross span:first-child {
	width: 20px;
	height: 2px;
	transform: translate(-50%, -50%);
	animation: crossRotate1 4s ease-in-out infinite;
}

.deco-cross span:last-child {
	width: 2px;
	height: 20px;
	transform: translate(-50%, -50%);
	animation: crossRotate2 4s ease-in-out infinite;
}

@keyframes crossRotate1 {
	0%, 100% { transform: translate(-50%, -50%) rotate(0deg); }
	50% { transform: translate(-50%, -50%) rotate(180deg); }
}

@keyframes crossRotate2 {
	0%, 100% { transform: translate(-50%, -50%) rotate(0deg); }
	50% { transform: translate(-50%, -50%) rotate(180deg); }
}

/* Spinner */
.deco-spinner {
	width: 50px;
	height: 50px;
	padding: 0;
	display: flex;
	align-items: center;
	justify-content: center;
}

.deco-spinner span {
	width: 24px;
	height: 24px;
	border: 2px solid rgba(255, 255, 255, 0.1);
	border-top-color: rgba(124, 58, 237, 0.8);
	border-radius: 50%;
	animation: spin 0.8s linear infinite;
}

@keyframes spin {
	from { transform: rotate(0deg); }
	to { transform: rotate(360deg); }
}

/* Grid Dots - Enhanced */
.deco-grid-dots {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 6px;
	padding: 1rem;
	width: 60px;
	height: 60px;
}

.deco-grid-dots span {
	width: 6px;
	height: 6px;
	background: rgba(255, 255, 255, 0.3);
	border-radius: 50%;
	animation: gridDotPulse 2s ease-in-out infinite;
}

.deco-grid-dots span:nth-child(1) { animation-delay: 0s; }
.deco-grid-dots span:nth-child(2) { animation-delay: 0.1s; }
.deco-grid-dots span:nth-child(3) { animation-delay: 0.2s; }
.deco-grid-dots span:nth-child(4) { animation-delay: 0.3s; }
.deco-grid-dots span:nth-child(5) { animation-delay: 0.4s; }
.deco-grid-dots span:nth-child(6) { animation-delay: 0.5s; }
.deco-grid-dots span:nth-child(7) { animation-delay: 0.6s; }
.deco-grid-dots span:nth-child(8) { animation-delay: 0.7s; }
.deco-grid-dots span:nth-child(9) { animation-delay: 0.8s; }

@keyframes gridDotPulse {
	0%, 100% {
		opacity: 0.3;
		transform: scale(1);
		background: rgba(255, 255, 255, 0.3);
	}
	50% {
		opacity: 1;
		transform: scale(1.4);
		background: rgba(124, 58, 237, 0.8);
	}
