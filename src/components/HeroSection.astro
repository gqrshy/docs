<script is:inline>
(function() {
	const translations = {
		en: {
			greeting: "Hey there! I'm",
			bio: "Minecraft Mod Developer from Japan!<br />Creating high-quality mods for Cobblemon.",
			joinDiscord: "join discord!",
			viewDocs: "view docs!"
		},
		ja: {
			greeting: "こんにちは！",
			bio: "日本のMinecraft Mod開発者です！<br />Cobblemon向けの高品質なModを制作しています。",
			joinDiscord: "discordに参加！",
			viewDocs: "ドキュメント"
		}
	};

	function applyHeroTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.hero-section [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) el.innerHTML = t[key];
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyHeroTranslations(lang);
	}

	window.addEventListener('langChange', (e) => applyHeroTranslations(e.detail.lang));
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
.hero-section {
	min-height: 100vh;
	background: linear-gradient(135deg, #e8e0f0 0%, #d4c8e8 50%, #c8d4f0 100%);
	position: relative;
	overflow: hidden;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 100px 40px 60px;
}

/* ===== Blobs (overflow viewport edges) ===== */
.blob {
	position: absolute;
	border-radius: 50% 40% 60% 50% / 50% 60% 40% 50%;
	z-index: 0;
	pointer-events: none;
}

.blob-1 {
	width: 400px;
	height: 380px;
	background: linear-gradient(135deg, #7c8cf0, #6b7ce0);
	top: -100px;
	right: -100px;
	animation: blobFloat 8s ease-in-out infinite;
}

.blob-2 {
	width: 320px;
	height: 300px;
	background: linear-gradient(135deg, #f0a0b0, #e090a0);
	bottom: -80px;
	left: -100px;
	animation: blobFloat 10s ease-in-out infinite reverse;
}

.blob-3 {
	width: 200px;
	height: 200px;
	background: linear-gradient(135deg, #a0b8f0, #90a8e0);
	top: 40%;
	left: -80px;
	animation: blobFloat 7s ease-in-out infinite 1s;
}

.blob-4 {
	width: 150px;
	height: 150px;
	background: linear-gradient(135deg, #c0a0e0, #b090d0);
	bottom: 20%;
	right: -50px;
	animation: blobFloat 9s ease-in-out infinite 0.5s;
}

.blob-5 {
	width: 100px;
	height: 100px;
	background: linear-gradient(135deg, #90c0f0, #80b0e0);
	top: 15%;
	left: 8%;
	animation: blobFloat 6s ease-in-out infinite 2s;
}

.blob-6 {
	width: 80px;
	height: 80px;
	background: linear-gradient(135deg, #f0c0d0, #e0b0c0);
	bottom: 35%;
	left: 5%;
	animation: blobFloat 8s ease-in-out infinite 1.5s;
}

@keyframes blobFloat {
	0%, 100% { transform: translate(0, 0) rotate(0deg) scale(1); }
	50% { transform: translate(20px, -25px) rotate(5deg) scale(1.05); }
}

/* ===== Floating Shapes ===== */
.shape {
	position: absolute;
	z-index: 1;
	pointer-events: none;
}

.shape-star {
	font-size: 1.8rem;
	animation: twinkle 3s ease-in-out infinite;
}

.shape-1 { top: 20%; left: 5%; color: #f0a0b0; }
.shape-2 { top: 60%; right: 8%; color: #a0b8f0; animation-delay: 1.5s; }

.shape-drop {
	width: 12px;
	height: 18px;
	background: linear-gradient(180deg, #a0c0f0 0%, #80a0e0 100%);
	border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
	transform: rotate(45deg);
	animation: dropFloat 4s ease-in-out infinite;
}

.shape-3 { top: 30%; right: 15%; }
.shape-4 { bottom: 40%; left: 12%; animation-delay: 2s; }

.shape-circle {
	width: 14px;
	height: 14px;
	border-radius: 50%;
	animation: bounce 4s ease-in-out infinite;
}

.shape-5 { top: 50%; right: 5%; background: #c0a0e0; }
.shape-6 { bottom: 25%; left: 18%; background: #f0c0d0; animation-delay: 1s; }

@keyframes twinkle {
	0%, 100% { opacity: 0.6; transform: scale(1) rotate(0deg); }
	50% { opacity: 1; transform: scale(1.3) rotate(20deg); }
}

@keyframes dropFloat {
	0%, 100% { transform: rotate(45deg) translateY(0); }
	50% { transform: rotate(45deg) translateY(-15px); }
}

@keyframes bounce {
	0%, 100% { transform: translateY(0); }
	50% { transform: translateY(-12px); }
}

/* ===== Wrapper ===== */
.hero-wrapper {
	width: 100%;
	max-width: 1200px;
	position: relative;
	z-index: 2;
}

/* ===== Content Grid ===== */
.hero-content {
	display: grid;
	grid-template-columns: 1fr 1fr;
	gap: 40px;
	align-items: center;
}

/* ===== Text Section ===== */
.hero-text {
	animation: slideIn 0.8s ease-out;
}

@keyframes slideIn {
	from { opacity: 0; transform: translateX(-30px); }
	to { opacity: 1; transform: translateX(0); }
}

.greeting {
	font-family: 'Lilita One', 'Inter', sans-serif;
	font-size: 1.5rem;
	color: #6b5b7a;
	margin: 0 0 4px;
	font-weight: 500;
}

.name {
	font-family: 'Lilita One', 'Inter', sans-serif;
	font-size: 5rem;
	font-weight: 700;
	color: #4a4a5a;
	margin: 0 0 24px;
	letter-spacing: -0.01em;
	line-height: 1.0;
}

.bio {
	font-size: 1.1rem;
	line-height: 1.8;
	color: #6b5b7a;
	margin: 0 0 32px;
}

/* ===== Buttons ===== */
.hero-buttons {
	display: flex;
	gap: 16px;
	flex-wrap: wrap;
}

.btn {
	display: inline-flex;
	align-items: center;
	gap: 8px;
	padding: 14px 28px;
	border-radius: 50px;
	font-weight: 600;
	font-size: 1rem;
	text-decoration: none;
	transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
	border: 2px solid transparent;
}

.btn svg {
	flex-shrink: 0;
}

.btn-primary {
	background: linear-gradient(135deg, #f07080, #e06070);
	color: #fff;
	box-shadow: 0 4px 20px rgba(240, 112, 128, 0.4);
}

.btn-primary:hover {
	transform: translateY(-3px) scale(1.02);
	box-shadow: 0 8px 30px rgba(240, 112, 128, 0.5);
}

.btn-secondary {
	background: rgba(255, 255, 255, 0.8);
	color: #6b5b7a;
	border-color: rgba(240, 112, 128, 0.4);
}

.btn-secondary:hover {
	background: #fff;
	border-color: #f07080;
	transform: translateY(-3px);
}

/* ===== Character Visual ===== */
.hero-visual {
	position: relative;
	display: flex;
	justify-content: center;
	align-items: center;
	animation: slideIn 0.8s ease-out 0.2s backwards;
}

.character-image {
	max-width: 100%;
	max-height: 500px;
	width: auto;
	height: auto;
	object-fit: contain;
	filter: drop-shadow(0 10px 40px rgba(124, 108, 154, 0.3));
	animation: characterFloat 4s ease-in-out infinite;
}

@keyframes characterFloat {
	0%, 100% { transform: translateY(0); }
	50% { transform: translateY(-15px); }
}

/* ===== Social Bar ===== */
.social-bar {
	display: flex;
	justify-content: center;
	gap: 12px;
	margin-top: 60px;
	animation: fadeUp 0.8s ease-out 0.4s backwards;
}

@keyframes fadeUp {
	from { opacity: 0; transform: translateY(20px); }
	to { opacity: 1; transform: translateY(0); }
}

.social-link {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 44px;
	height: 44px;
	border-radius: 50%;
	background: rgba(255, 255, 255, 0.8);
	box-shadow: 0 2px 10px rgba(124, 108, 154, 0.12);
	transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
	color: #6b5b7a;
}

.social-link:hover {
	transform: translateY(-4px) scale(1.1);
	background: #fff;
	box-shadow: 0 6px 20px rgba(124, 108, 154, 0.2);
}

.social-link svg,
.social-link img {
	width: 20px;
	height: 20px;
	flex-shrink: 0;
}

.social-link.modrinth { color: #1bd96a; }
.social-link.curseforge { color: #f16436; }
.social-link.youtube { color: #ff0000; }
.social-link.x { color: #000; }

/* ===== Responsive ===== */
@media (max-width: 900px) {
	.hero-section {
		padding: 100px 24px 50px;
	}

	.hero-content {
		grid-template-columns: 1fr;
		text-align: center;
		gap: 30px;
	}

	.hero-text { order: 2; }
	.hero-visual { order: 1; }

	.name { font-size: 3.5rem; }
	.hero-buttons { justify-content: center; }

	.character-image {
		max-height: 350px;
	}

	.blob-1 { width: 250px; height: 230px; top: -60px; right: -80px; }
	.blob-2 { width: 200px; height: 180px; bottom: -50px; left: -60px; }
	.blob-3, .blob-4 { display: none; }
}

@media (max-width: 600px) {
	.hero-section { padding: 90px 16px 40px; }
	.name { font-size: 2.8rem; }
	.bio { font-size: 1rem; }
	.character-image { max-height: 280px; }
	.social-bar { flex-wrap: wrap; gap: 10px; }
	.social-link { width: 40px; height: 40px; }
	.social-link svg, .social-link img { width: 18px; height: 18px; }
	.hero-buttons { flex-direction: column; align-items: center; }
	.btn { width: 100%; max-width: 240px; justify-content: center; }
}
</style>
