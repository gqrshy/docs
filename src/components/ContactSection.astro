---
// Contact section - PolarCub-inspired layout with wave on left, text on right
---

<section id="contact" class="contact-section">
	<!-- Thin decorative wave lines - organized in periodic blocks like PolarCub -->
	<!-- Left block -->
	<div class="thin-wave-block block-left">
		<svg class="thin-wave" viewBox="0 0 20 200" fill="none"><path d="M10 0 Q0 25 10 50 Q20 75 10 100 Q0 125 10 150 Q20 175 10 200" stroke="#a0a0c8" stroke-width="2" fill="none" stroke-linecap="round"/></svg>
		<svg class="thin-wave" viewBox="0 0 20 200" fill="none"><path d="M10 0 Q0 25 10 50 Q20 75 10 100 Q0 125 10 150 Q20 175 10 200" stroke="#a0a0c8" stroke-width="2" fill="none" stroke-linecap="round"/></svg>
		<svg class="thin-wave" viewBox="0 0 20 200" fill="none"><path d="M10 0 Q0 25 10 50 Q20 75 10 100 Q0 125 10 150 Q20 175 10 200" stroke="#a0a0c8" stroke-width="2" fill="none" stroke-linecap="round"/></svg>
		<svg class="thin-wave" viewBox="0 0 20 200" fill="none"><path d="M10 0 Q0 25 10 50 Q20 75 10 100 Q0 125 10 150 Q20 175 10 200" stroke="#a0a0c8" stroke-width="2" fill="none" stroke-linecap="round"/></svg>
	</div>
	<!-- Right block -->
	<div class="thin-wave-block block-right">
		<svg class="thin-wave" viewBox="0 0 20 200" fill="none"><path d="M10 0 Q0 25 10 50 Q20 75 10 100 Q0 125 10 150 Q20 175 10 200" stroke="#a0a0c8" stroke-width="2" fill="none" stroke-linecap="round"/></svg>
		<svg class="thin-wave" viewBox="0 0 20 200" fill="none"><path d="M10 0 Q0 25 10 50 Q20 75 10 100 Q0 125 10 150 Q20 175 10 200" stroke="#a0a0c8" stroke-width="2" fill="none" stroke-linecap="round"/></svg>
		<svg class="thin-wave" viewBox="0 0 20 200" fill="none"><path d="M10 0 Q0 25 10 50 Q20 75 10 100 Q0 125 10 150 Q20 175 10 200" stroke="#a0a0c8" stroke-width="2" fill="none" stroke-linecap="round"/></svg>
		<svg class="thin-wave" viewBox="0 0 20 200" fill="none"><path d="M10 0 Q0 25 10 50 Q20 75 10 100 Q0 125 10 150 Q20 175 10 200" stroke="#a0a0c8" stroke-width="2" fill="none" stroke-linecap="round"/></svg>
	</div>

	<div class="contact-wrapper">
		<!-- Header - Left aligned -->
		<div class="contact-header">
			<h2 class="contact-title">
				<span data-i18n="contactTitle">Get in touch</span><span class="title-marks">!!</span>
			</h2>
			<p class="contact-subtitle" data-i18n="contactSubtitle">
				Want to collaborate or have questions?<br />
				Let me know and <span class="highlight">I'll reply as soon as I can</span>!
			</p>
			<p class="contact-note" data-i18n="contactNote">
				Please refrain from sending spam or unrelated inquiries.
			</p>
		</div>

		<!-- Form - PolarCub style (no card wrapper, inputs have individual glass effect) -->
		<form class="contact-form" action="https://formsubmit.co/gashistudios.llc@gmail.com" method="POST">
			<!-- Honeypot -->
			<input type="text" name="_honey" style="display:none">
			<!-- Disable captcha -->
			<input type="hidden" name="_captcha" value="false">
			<!-- Success redirect -->
			<input type="hidden" name="_next" value="https://gashistudios.site/?sent=true">

			<div class="form-row">
				<input type="email" name="email" required placeholder="Email" />
				<input type="text" name="name" required placeholder="Name" />
			</div>
			<textarea name="message" required placeholder="Type in a short message!" rows="5"></textarea>
			<button type="submit" class="submit-btn">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
					<polyline points="20,6 9,17 4,12"/>
				</svg>
				<span data-i18n="contactSubmit">submit</span>
			</button>
		</form>
	</div>
</section>

<script is:inline>
(function() {
	const translations = {
		en: {
			contactTitle: "Get in touch",
			contactSubtitle: "Want to collaborate or have questions?<br />Let me know and <span class=\"highlight\">I'll reply as soon as I can</span>!",
			contactNote: "Please refrain from sending spam or unrelated inquiries.",
			contactSubmit: "submit"
		},
		ja: {
			contactTitle: "お問い合わせ",
			contactSubtitle: "コラボや質問がありますか？<br /><span class=\"highlight\">できるだけ早く返信します</span>！",
			contactNote: "スパムや無関係なお問い合わせはご遠慮ください。",
			contactSubmit: "送信"
		}
	};

	function applyContactTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.contact-section [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) {
				el.innerHTML = t[key];
			}
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyContactTranslations(lang);
	}

	window.addEventListener('langChange', (e) => {
		applyContactTranslations(e.detail.lang);
	});

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
.contact-section {
	position: relative;
	padding: 5rem 2rem 6rem;
	background: transparent;
	overflow: visible;
}

/* ===== Thin Decorative Waves - Organized Periodic Blocks ===== */
.thin-wave-block {
	position: absolute;
	display: flex;
	gap: 30px;
	pointer-events: none;
	z-index: 1;
}

.thin-wave {
	width: 20px;
	height: 180px;
	opacity: 0.35;
}

/* Left block - positioned at left edge */
.block-left {
	top: 15%;
	left: 3%;
	transform: rotate(-5deg);
}

/* Right block - positioned at right edge */
.block-right {
	top: 20%;
	right: 3%;
	transform: rotate(5deg);
}

/* ===== Wave Container - Behind form for depth effect ===== */
.wave-container {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	pointer-events: none;
	z-index: 3;
	overflow: visible;
}

.depth-wave {
	position: absolute;
}

/* Wave 1 - Left side, through Email input and textarea */
.depth-wave-1 {
	width: 420px;
	height: 800px;
	top: -20%;
	left: 18%;
	transform: rotate(5deg);
}

/* Wave 2 - Right side, through Name input and textarea */
.depth-wave-2 {
	width: 400px;
	height: 750px;
	top: -30%;
	right: 15%;
	left: auto;
	transform: rotate(-8deg) scaleX(-1);
}

/* ===== Wrapper ===== */
.contact-wrapper {
	position: relative;
	max-width: 1100px;
	margin: 0 auto;
	z-index: 5;
}

/* ===== Header - Left aligned ===== */
.contact-header {
	text-align: left;
	margin-bottom: 2rem;
	position: relative;
	z-index: 10;
	/* Header should be above everything */
	background: transparent;
}

.contact-title {
	font-family: 'Lilita One', 'Inter', sans-serif;
	font-size: 4rem;
	font-weight: 400;
	color: #454141;
	margin: 0 0 16px;
	line-height: 1.1;
}

.title-marks {
	color: #ff4080;
}

.contact-subtitle {
	font-size: 1.1rem;
	color: #5a5a6a;
	margin: 0 0 8px;
	line-height: 1.7;
}

.highlight {
	color: #ff4080;
	text-decoration: underline;
	text-decoration-style: wavy;
	text-underline-offset: 3px;
}

.contact-note {
	font-size: 0.9rem;
	color: #ff4080;
	margin: 0;
	font-weight: 500;
}

/* ===== Form - PolarCub Style ===== */
.contact-form {
	display: flex;
	flex-direction: column;
	gap: 20px;
	position: relative;
	z-index: 5;
}

.form-row {
	display: grid;
	grid-template-columns: 1fr 1fr;
	gap: 20px;
}

/* PolarCub-style frosted glass inputs */
.contact-form input[type="email"],
.contact-form input[type="text"],
.contact-form textarea {
	width: 100%;
	padding: 24px 32px;
	border: 2px solid transparent;
	border-radius: 16px;
	background-color: rgba(203, 201, 242, 0.7);
	backdrop-filter: blur(24px);
	-webkit-backdrop-filter: blur(24px);
	font-size: 1.15rem;
	font-family: inherit;
	font-weight: 500;
	color: #4c75f2;
	transition: all 0.2s ease;
}

.contact-form input::placeholder,
.contact-form textarea::placeholder {
	color: #454141;
	font-weight: 500;
}

.contact-form input:focus,
.contact-form textarea:focus {
	outline: none;
	border-color: #4c75f2;
	background-color: rgba(203, 201, 242, 0.85);
}

.contact-form textarea {
	resize: vertical;
	min-height: 160px;
}

.submit-btn {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	gap: 10px;
	padding: 14px 40px;
	background: linear-gradient(135deg, #ff4080 0%, #ff6090 100%);
	color: #fff;
	border: none;
	border-radius: 50px;
	font-size: 1rem;
	font-weight: 600;
	font-family: inherit;
	cursor: pointer;
	transition: box-shadow 0.2s ease;
	box-shadow: 0 4px 20px rgba(255, 64, 128, 0.35);
	align-self: center;
	margin-top: 8px;
	animation: jellyOutDown 0.4s ease forwards;
}

.submit-btn:hover {
	box-shadow: 0 8px 30px rgba(255, 64, 128, 0.45);
	animation: jellyInUp 0.35s ease forwards;
}

.submit-btn svg {
	flex-shrink: 0;
}

/* ===== Responsive ===== */
@media (max-width: 900px) {
	.contact-header {
		text-align: center;
	}

	.contact-title {
		font-size: 3rem;
	}

	.depth-wave-1 {
		width: 320px;
		height: 600px;
		left: 2%;
	}

	.depth-wave-2 {
		width: 300px;
		height: 550px;
		right: 2%;
	}

	/* Adjust thin wave blocks on tablet */
	.thin-wave-block {
		gap: 20px;
	}

	.thin-wave {
		height: 140px;
		opacity: 0.25;
	}

	.block-left {
		left: 1%;
	}

	.block-right {
		right: 1%;
	}
}

@media (max-width: 600px) {
	.contact-section {
		padding: 3rem 1rem 4rem;
	}

	.contact-title {
		font-size: 2.5rem;
	}

	.contact-subtitle {
		font-size: 1rem;
	}

	.contact-form input[type="email"],
	.contact-form input[type="text"],
	.contact-form textarea {
		padding: 18px 20px;
		font-size: 1rem;
	}

	.form-row {
		grid-template-columns: 1fr;
	}

	.depth-wave-1 {
		width: 220px;
		height: 400px;
		left: -5%;
		top: 5%;
	}

	.depth-wave-2 {
		width: 200px;
		height: 380px;
		right: -5%;
		top: -5%;
	}

	.submit-btn {
		padding: 14px 32px;
		font-size: 0.95rem;
	}

	/* Hide thin wave blocks on mobile */
	.thin-wave-block {
		display: none;
	}
}
</style>
