function isActive(href: string): boolean {
	return currentPath === href || currentPath === href.slice(0, -1);
}

function hasActiveChild(items: any[]): boolean {
	return items.some(item => {
		if (item.href && isActive(item.href)) return true;
		if (item.items) return hasActiveChild(item.items);
		return false;
	});
}
---

<aside class="doc-sidebar">
	<nav class="sidebar-nav">
		{navigation.map((section, sectionIndex) => (
			<details class="nav-section" open={hasActiveChild(section.items)} style={`--section-index: ${sectionIndex}`}>
				<summary class="section-title">
					<span class="section-icon">{section.icon}</span>
					<span class="section-name">{section.title}</span>
				</summary>
				<ul class="nav-list">
					{section.items.map((item, itemIndex) => (
						<li style={`--item-index: ${itemIndex}`}>
							{item.items ? (
								<details open={hasActiveChild(item.items)}>
									<summary class="nav-group-title">{item.label}</summary>
									<ul class="nav-sublist">
										{item.items.map((subItem: any, subIndex: number) => (
											<li style={`--sub-index: ${subIndex}`}>
												<a
													href={subItem.href}
													class:list={['nav-link', { active: isActive(subItem.href) }]}
												>
													<span class="link-text">{subItem.label}</span>
												</a>
											</li>
										))}
									</ul>
								</details>
							) : (
								<a
									href={item.href}
									class:list={['nav-link', 'top-level', { active: isActive(item.href) }]}
								>
									<span class="link-text">{item.label}</span>
								</a>
							)}
						</li>
					))}
				</ul>
			</details>
		))}
	</nav>

	<div class="sidebar-footer">
		<a href="https://discord.gg/VVVvBTqqyP" target="_blank" class="sidebar-discord">
