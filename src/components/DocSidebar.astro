<!-- Mobile sidebar toggle -->
<button id="sidebarToggle" class="sidebar-toggle" aria-label="Toggle sidebar">
	<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
		<line x1="3" y1="12" x2="21" y2="12"/>
		<line x1="3" y1="6" x2="21" y2="6"/>
		<line x1="3" y1="18" x2="21" y2="18"/>
	</svg>
</button>

<div id="sidebarOverlay" class="sidebar-overlay"></div>

<script is:inline>
	const toggle = document.getElementById('sidebarToggle');
	const sidebar = document.querySelector('.doc-sidebar');
	const overlay = document.getElementById('sidebarOverlay');

	toggle?.addEventListener('click', () => {
		sidebar?.classList.toggle('open');
		overlay?.classList.toggle('open');
	});

	overlay?.addEventListener('click', () => {
		sidebar?.classList.remove('open');
		overlay?.classList.remove('open');
	});
</script>

<style>
/* CSS Variables */
:root {
	--ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
	--ease-out-back: cubic-bezier(0.34, 1.56, 0.64, 1);
	--ease-spring: cubic-bezier(0.87, 0.05, 0.02, 0.97);
}

.doc-sidebar {
	position: fixed;
	top: 60px;
	left: 0;
	width: 280px;
	height: calc(100vh - 60px);
	background: linear-gradient(180deg, rgba(10, 6, 18, 0.95) 0%, rgba(13, 8, 23, 0.98) 100%);
	backdrop-filter: blur(10px);
	border-right: 1px solid rgba(124, 58, 237, 0.15);
	display: flex;
	flex-direction: column;
	z-index: 100;
	overflow: hidden;
	animation: sidebar-enter 0.6s var(--ease-out-expo) forwards;
}

@keyframes sidebar-enter {
	from {
		opacity: 0;
		transform: translateX(-20px);
	}
	to {
		opacity: 1;
		transform: translateX(0);
	}
}

.sidebar-nav {
	flex: 1;
	overflow-y: auto;
	padding: 1rem 0;
}

.nav-section {
	margin-bottom: 1rem;
	animation: section-enter 0.5s var(--ease-out-expo) calc(var(--section-index, 0) * 0.1s) backwards;
}

@keyframes section-enter {
	from {
		opacity: 0;
		transform: translateX(-10px);
	}
	to {
		opacity: 1;
		transform: translateX(0);
	}
}

.section-title {
	display: flex;
	align-items: center;
	gap: 0.5rem;
	padding: 0.75rem 1.25rem;
	font-size: 0.9rem;
	font-weight: 600;
	color: rgba(255, 255, 255, 0.9);
	cursor: pointer;
	list-style: none;
	user-select: none;
	transition: all 0.25s var(--ease-out-expo);
	border-radius: 8px;
	margin: 0 0.5rem;
	position: relative;
	overflow: hidden;
}

.section-title::after {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: linear-gradient(90deg, transparent, rgba(124, 58, 237, 0.1), transparent);
	transform: translateX(-100%);
	transition: transform 0.5s ease;
}

.section-title:hover::after {
	transform: translateX(100%);
}

.section-title::-webkit-details-marker {
	display: none;
}

.section-title::before {
	content: '';
	width: 6px;
	height: 6px;
	border-right: 2px solid rgba(255, 255, 255, 0.5);
	border-bottom: 2px solid rgba(255, 255, 255, 0.5);
	transform: rotate(-45deg);
	transition: transform 0.3s var(--ease-out-back), border-color 0.2s ease;
	flex-shrink: 0;
}

.nav-section[open] > .section-title::before {
	transform: rotate(45deg);
}

.section-title:hover {
	color: #a78bfa;
	background: rgba(124, 58, 237, 0.1);
	transform: translateX(4px);
}

.section-title:hover::before {
	border-color: #a78bfa;
}

.section-icon {
	font-size: 1rem;
	transition: transform 0.3s var(--ease-out-back);
}

.section-title:hover .section-icon {
	transform: scale(1.2) rotate(-5deg);
}

.nav-list {
	list-style: none;
	padding: 0 0.5rem;
}

.nav-list > li {
	margin-bottom: 2px;
	animation: item-enter 0.4s var(--ease-out-expo) calc(var(--item-index, 0) * 0.05s) backwards;
}

@keyframes item-enter {
	from {
		opacity: 0;
		transform: translateX(-10px);
	}
	to {
		opacity: 1;
		transform: translateX(0);
	}
}

.nav-link {
	display: flex;
	align-items: center;
	padding: 0.5rem 0.875rem;
	color: rgba(255, 255, 255, 0.7);
	text-decoration: none;
	font-size: 0.875rem;
	border-radius: 6px;
	transition: all 0.2s var(--ease-out-expo);
	position: relative;
}

.link-text {
	position: relative;
	z-index: 1;
}

.nav-link::before {
	content: '';
	position: absolute;
	left: 0;
	top: 0;
	width: 0;
	height: 100%;
	background: linear-gradient(90deg, rgba(124, 58, 237, 0.15), transparent);
	border-radius: 6px;
	transition: width 0.3s var(--ease-out-expo);
}

.nav-link:hover::before {
	width: 100%;
}

.nav-link:hover {
	color: #c4b5fd;
	transform: translateX(4px);
}

.nav-link.active {
	color: #a78bfa;
	background: rgba(124, 58, 237, 0.15);
	font-weight: 500;
}

.nav-link.active::before {
	width: 100%;
	background: linear-gradient(90deg, rgba(124, 58, 237, 0.2), transparent);
}

.nav-link.top-level {
	font-weight: 500;
	color: rgba(255, 255, 255, 0.85);
}

.nav-link.top-level:hover {
	color: #a78bfa;
}

/* Collapsible groups - dropdown style */
details {
	margin-bottom: 2px;
}

details > summary {
	display: flex;
	align-items: center;
	padding: 0.5rem 0.875rem;
	color: rgba(255, 255, 255, 0.85);
	font-size: 0.875rem;
	font-weight: 500;
	cursor: pointer;
	border-radius: 6px;
	transition: all 0.25s var(--ease-out-expo);
	list-style: none;
	user-select: none;
}

details > summary::-webkit-details-marker {
	display: none;
}

details > summary::before {
	content: '';
	width: 6px;
	height: 6px;
	border-right: 2px solid rgba(255, 255, 255, 0.4);
	border-bottom: 2px solid rgba(255, 255, 255, 0.4);
	transform: rotate(-45deg);
	margin-right: 0.625rem;
	transition: transform 0.3s var(--ease-out-back), border-color 0.2s ease;
}

details[open] > summary::before {
	transform: rotate(45deg);
}

details > summary:hover {
	color: #a78bfa;
	background: rgba(124, 58, 237, 0.05);
	transform: translateX(4px);
}

details > summary:hover::before {
	border-color: #a78bfa;
}

/* Hierarchical nested list - staircase style */
.nav-sublist {
	list-style: none;
	margin: 4px 0 4px 0;
	padding: 4px 0 4px 0.75rem;
	border-left: 2px solid rgba(124, 58, 237, 0.2);
	margin-left: 0.875rem;
	position: relative;
	animation: sublist-enter 0.3s var(--ease-out-expo);
}

@keyframes sublist-enter {
	from {
		opacity: 0;
		transform: translateY(-10px);
	}
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

.nav-sublist::before {
	content: '';
	position: absolute;
	left: -2px;
	top: 0;
	width: 2px;
	height: 0;
	background: linear-gradient(180deg, #7c3aed, transparent);
	animation: line-grow 0.5s var(--ease-out-expo) forwards;
}

@keyframes line-grow {
	to {
		height: 100%;
	}
}

.nav-sublist li {
	margin-bottom: 2px;
	animation: subitem-enter 0.3s var(--ease-out-expo) calc(var(--sub-index, 0) * 0.05s) backwards;
}

@keyframes subitem-enter {
	from {
		opacity: 0;
		transform: translateX(-8px);
	}
	to {
		opacity: 1;
		transform: translateX(0);
	}
}

.nav-sublist .nav-link {
	font-size: 0.8125rem;
	padding: 0.375rem 0.75rem;
	color: rgba(255, 255, 255, 0.6);
	font-weight: 400;
}

.nav-sublist .nav-link:hover {
	color: #c4b5fd;
}

.nav-sublist .nav-link.active {
	color: #a78bfa;
	background: rgba(124, 58, 237, 0.12);
	position: relative;
}

.nav-sublist .nav-link.active::after {
	content: '';
	position: absolute;
	left: -0.75rem;
	top: 50%;
	transform: translateY(-50%);
	width: 4px;
	height: 16px;
	background: linear-gradient(180deg, #7c3aed, #a78bfa);
	border-radius: 2px;
	margin-left: -2px;
	animation: indicator-pop 0.3s var(--ease-out-back);
}

@keyframes indicator-pop {
	from {
		transform: translateY(-50%) scaleY(0);
	}
	to {
		transform: translateY(-50%) scaleY(1);
	}
}

/* Footer */
.sidebar-footer {
	padding: 1rem 1.5rem;
	border-top: 1px solid rgba(124, 58, 237, 0.1);
}

.sidebar-discord {
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 0.5rem;
	padding: 0.75rem 1rem;
	background: linear-gradient(135deg, #5865F2 0%, #4752C4 100%);
	color: #fff;
	text-decoration: none;
	border-radius: 10px;
	font-weight: 500;
	font-size: 0.9rem;
	transition: all 0.3s var(--ease-out-back);
	position: relative;
	overflow: hidden;
}

.sidebar-discord::before {
	content: '';
	position: absolute;
	top: 0;
	left: -100%;
	width: 100%;
	height: 100%;
	background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
	transition: left 0.5s ease;
}

.sidebar-discord:hover::before {
	left: 100%;
}

.sidebar-discord:hover {
	transform: translateY(-3px) scale(1.02);
	box-shadow: 0 8px 25px rgba(88, 101, 242, 0.4);
}

.sidebar-discord svg {
	transition: transform 0.3s var(--ease-out-back);
}

.sidebar-discord:hover svg {
	transform: rotate(-10deg) scale(1.1);
}

/* Mobile toggle button */
.sidebar-toggle {
	display: none;
	position: fixed;
	top: 70px;
	left: 1rem;
	z-index: 200;
	background: linear-gradient(135deg, rgba(124, 58, 237, 0.9) 0%, rgba(99, 102, 241, 0.9) 100%);
	border: none;
	border-radius: 10px;
	padding: 0.6rem;
	color: #fff;
	cursor: pointer;
	box-shadow: 0 4px 20px rgba(124, 58, 237, 0.4);
	transition: all 0.3s var(--ease-out-back);
}

.sidebar-toggle:hover {
	transform: scale(1.1);
	box-shadow: 0 6px 25px rgba(124, 58, 237, 0.5);
}

.sidebar-toggle:active {
	transform: scale(0.95);
}

.sidebar-overlay {
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.6);
	backdrop-filter: blur(4px);
	z-index: 99;
	animation: overlay-fade 0.3s ease;
}

@keyframes overlay-fade {
	from { opacity: 0; }
	to { opacity: 1; }
}

/* Scrollbar */
.sidebar-nav::-webkit-scrollbar {
	width: 6px;
}

.sidebar-nav::-webkit-scrollbar-track {
	background: transparent;
}

.sidebar-nav::-webkit-scrollbar-thumb {
	background: rgba(124, 58, 237, 0.3);
	border-radius: 3px;
	transition: background 0.2s ease;
}

.sidebar-nav::-webkit-scrollbar-thumb:hover {
	background: rgba(124, 58, 237, 0.5);
}

/* Responsive */
@media (max-width: 992px) {
	.doc-sidebar {
		transform: translateX(-100%);
		transition: transform 0.4s var(--ease-out-expo);
	}

	.doc-sidebar.open {
		transform: translateX(0);
	}

	.sidebar-toggle {
		display: flex;
	}

	.sidebar-overlay.open {
		display: block;
	}
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
	*, *::before, *::after {
		animation-duration: 0.01ms !important;
		animation-iteration-count: 1 !important;
		transition-duration: 0.01ms !important;
	}
}
</style>
