<script is:inline>
(function() {
	const translations = {
		en: {
			navServers: "Servers",
			navDocs: "Documents",
			navTerms: "Terms"
		},
		ja: {
			navServers: "サーバー",
			navDocs: "ドキュメント",
			navTerms: "利用規約"
		}
	};

	function applyNavTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.custom-nav [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) {
				// Preserve the dot element
				const dot = el.querySelector('.link-dot');
				if (dot) {
					el.innerHTML = '';
					el.appendChild(dot);
					el.appendChild(document.createTextNode(t[key]));
				} else {
					el.textContent = t[key];
				}
			}
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyNavTranslations(lang);
	}

	window.addEventListener('langChange', (e) => {
		applyNavTranslations(e.detail.lang);
	});

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
.custom-nav {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	z-index: 1000;
	background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 240, 255, 0.95) 100%);
	backdrop-filter: blur(12px);
	padding: 0.875rem 2rem;
}

.nav-container {
	max-width: 1200px;
	margin: 0 auto;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

/* Logo */
.nav-logo {
	display: flex;
	align-items: center;
	gap: 0.75rem;
	text-decoration: none;
	caret-color: transparent;
	user-select: none;
}

.logo-wrapper {
	position: relative;
}

.logo-wrapper img {
	width: 40px;
	height: 40px;
	border-radius: 12px;
	box-shadow: 0 4px 12px rgba(124, 108, 154, 0.25);
	transition: transform 0.3s ease;
}

.nav-logo:hover .logo-wrapper img {
	transform: rotate(-5deg) scale(1.05);
}

.logo-star {
	position: absolute;
	top: -6px;
	right: -6px;
	font-size: 14px;
	color: #f07080;
	animation: twinkleStar 2s ease-in-out infinite;
}

@keyframes twinkleStar {
	0%, 100% { opacity: 1; transform: scale(1); }
	50% { opacity: 0.6; transform: scale(0.8); }
}

.logo-text {
	color: #4a4a5a;
	font-weight: 700;
	font-size: 1.15rem;
	font-family: 'Lilita One', 'Inter', sans-serif;
	letter-spacing: 0.02em;
	transition: color 0.2s ease;
}

.nav-logo:hover .logo-text {
	color: #7c6c9a;
}

/* Nav Links */
.nav-links {
	display: flex;
	gap: 2rem;
}

.nav-link {
	position: relative;
	display: flex;
	align-items: center;
	gap: 0.5rem;
	color: #5a5a6a;
	text-decoration: none;
	font-size: 0.9rem;
	font-weight: 600;
	transition: color 0.2s ease;
}

.link-dot {
	width: 6px;
	height: 6px;
	border-radius: 50%;
	background: #d8c8f0;
	transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.nav-link:hover {
	color: #7c6c9a;
}

.nav-link:hover .link-dot {
	background: #f07080;
	transform: scale(1.3);
}

/* Social Buttons */
.nav-social {
	display: flex;
	gap: 0.625rem;
}

.social-btn {
	width: 38px;
	height: 38px;
	border-radius: 12px;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #fff;
	transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
	box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
}

.social-btn.discord {
	background: linear-gradient(135deg, #7289da, #5865f2);
}

.social-btn.github {
	background: linear-gradient(135deg, #333, #24292e);
}

.social-btn:hover {
	transform: translateY(-3px) scale(1.08);
	box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
}

/* Wave decoration */
.nav-wave {
	position: absolute;
	bottom: -10px;
	left: 0;
	right: 0;
	height: 12px;
	color: rgba(124, 108, 154, 0.08);
	pointer-events: none;
}

.nav-wave svg {
	width: 100%;
	height: 100%;
}

/* Mobile */
@media (max-width: 768px) {
	.nav-links {
		display: none;
	}

	.custom-nav {
		padding: 0.75rem 1rem;
	}

	.logo-text {
		display: none;
	}
}
</style>
