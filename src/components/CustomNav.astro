<script is:inline>
(function() {
	const translations = {
		en: {
			navProducts: "Products",
			navDocs: "Documents",
			navTerms: "Terms",
			navJoin: "Join"
		},
		ja: {
			navProducts: "プロダクト",
			navDocs: "ドキュメント",
			navTerms: "利用規約",
			navJoin: "参加"
		}
	};

	function applyNavTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.custom-nav [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) {
				el.textContent = t[key];
			}
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyNavTranslations(lang);
	}

	window.addEventListener('langChange', (e) => {
		applyNavTranslations(e.detail.lang);
	});

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
.custom-nav {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	z-index: 1000;
	background: rgba(15, 10, 26, 0.9);
	backdrop-filter: blur(10px);
	border-bottom: 1px solid rgba(124, 58, 237, 0.2);
	padding: 0.75rem 2rem;
}

.nav-container {
	max-width: 1200px;
	margin: 0 auto;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.nav-logo {
	display: flex;
	align-items: center;
	gap: 0.75rem;
	text-decoration: none;
	color: #fff;
	font-weight: 600;
	font-size: 1.1rem;
	caret-color: transparent;
	user-select: none;
}

.nav-logo span {
	caret-color: transparent;
}

.nav-logo img {
	width: 36px;
	height: 36px;
	border-radius: 8px;
}

.nav-links {
	display: flex;
	gap: 2rem;
}

.nav-link {
	color: rgba(255, 255, 255, 0.8);
	text-decoration: none;
	font-size: 0.9rem;
	font-weight: 500;
	transition: color 0.2s ease;
}

.nav-link:hover {
	color: #a78bfa;
}

.nav-discord-btn {
	display: flex;
	align-items: center;
	gap: 0.5rem;
	background: #5865F2;
	color: #fff;
	padding: 0.5rem 1rem;
	border-radius: 8px;
	text-decoration: none;
	font-weight: 600;
	font-size: 0.9rem;
	transition: all 0.2s ease;
}

.nav-discord-btn:hover {
	background: #4752C4;
	transform: translateY(-2px);
}

@media (max-width: 768px) {
	.nav-links {
		display: none;
	}

	.custom-nav {
		padding: 0.75rem 1rem;
	}
}
</style>
