---
// WavyBackground - Bold dynamic wavy lines inspired by polarcub.art
---

<div class="wavy-background">
	<!-- Main bold curved wave (Blue) - Left side, very prominent -->
	<svg class="bold-wave-main" viewBox="0 0 200 1000" preserveAspectRatio="none">
		<path d="M100,-50
			C150,80 30,180 80,300
			C130,420 20,520 70,650
			C120,780 40,880 90,1050"
			fill="none"
			stroke="#4a7aff"
			stroke-width="65"
			stroke-linecap="round"/>
	</svg>

	<!-- Secondary bold wave - Top right diagonal -->
	<svg class="bold-wave-topright" viewBox="0 0 600 400" preserveAspectRatio="none">
		<path d="M650,0
			C550,50 480,120 400,100
			C320,80 280,150 200,180
			C120,210 80,280 0,350"
			fill="none"
			stroke="#4a7aff"
			stroke-width="55"
			stroke-linecap="round"/>
	</svg>

	<!-- Vertical wavy lines pattern - subtle background texture -->
	<div class="wavy-lines-container">
		{[...Array(24)].map((_, i) => (
			<svg class="wavy-line-vertical" style={`left: ${2 + i * 4.2}%`} viewBox="0 0 10 400" preserveAspectRatio="none">
				<path d={`M5,0 Q0,33 5,66 Q10,100 5,133 Q0,166 5,200 Q10,233 5,266 Q0,300 5,333 Q10,366 5,400`}
					fill="none"
					stroke="#c0c8e8"
					stroke-width="1.2"
					stroke-linecap="round"/>
			</svg>
		))}
	</div>
</div>

<style>
.wavy-background {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	pointer-events: none;
	z-index: 0;
	overflow: hidden;
}

/* Main bold wave - Left side */
.bold-wave-main {
	position: absolute;
	top: -5%;
	left: -80px;
	width: 280px;
	height: 120%;
	z-index: 2;
	animation: waveFloat 12s ease-in-out infinite;
}

/* Top-right diagonal wave */
.bold-wave-topright {
	position: absolute;
	top: -50px;
	right: -100px;
	width: 700px;
	height: 450px;
	z-index: 2;
	animation: waveFloat 10s ease-in-out infinite reverse;
}

@keyframes waveFloat {
	0%, 100% { transform: translateY(0) translateX(0); }
	50% { transform: translateY(15px) translateX(5px); }
}

/* Vertical wavy lines pattern */
.wavy-lines-container {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 0;
}

.wavy-line-vertical {
	position: absolute;
	top: 0;
	width: 10px;
	height: 100%;
	opacity: 0.35;
}

/* Responsive */
@media (max-width: 1200px) {
	.bold-wave-main {
		width: 220px;
		left: -60px;
	}

	.bold-wave-topright {
		width: 550px;
		height: 380px;
		right: -80px;
	}
}

@media (max-width: 900px) {
	.bold-wave-main {
		width: 180px;
		left: -50px;
	}

	.bold-wave-topright {
		width: 400px;
		height: 300px;
		top: -30px;
		right: -60px;
	}

	.wavy-line-vertical {
		opacity: 0.2;
	}
}

@media (max-width: 600px) {
	.bold-wave-main {
		width: 140px;
		left: -40px;
	}

	.bold-wave-topright {
		width: 300px;
		height: 220px;
	}

	.wavy-lines-container {
		opacity: 0.6;
	}
}
</style>
