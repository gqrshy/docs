<script is:inline>
(function() {
	const translations = {
		en: {
			linksTitle: "Links",
			linksDev: "Development",
			linksHobby: "Hobbies",
			linksGaming: "Gaming"
		},
		ja: {
			linksTitle: "リンク",
			linksDev: "開発関連",
			linksHobby: "趣味",
			linksGaming: "ゲーム関連"
		}
	};

	function applyProfileTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.profile-section [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) {
				el.innerHTML = t[key];
			}
		});
	}

	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyProfileTranslations(lang);
	}

	window.addEventListener('langChange', (e) => {
		applyProfileTranslations(e.detail.lang);
	});

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
.profile-section {
	padding: 5rem 2rem;
	background: #0f0a1a;
}

.profile-container {
	max-width: 900px;
	margin: 0 auto;
}

.section-title {
	font-size: 1.75rem;
	font-weight: 700;
	color: #fff;
	margin: 0 0 2rem 0;
	letter-spacing: -0.02em;
}

/* Links Section */
.links-section {
	display: flex;
