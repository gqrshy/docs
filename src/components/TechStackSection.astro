<script is:inline>
(function() {
	const translations = {
		en: {
			techstackTitle: "Tech Stack",
			techstackSubtitle: "Technologies I work with",
			categoryMC: "MC Development",
			categoryDatabase: "Database",
			categoryWeb: "Web & Languages",
			categoryTools: "Dev Tools",
			categoryDesign: "Design & BaaS"
		},
		ja: {
			techstackTitle: "技術スタック",
			techstackSubtitle: "使用技術",
			categoryMC: "Minecraft開発",
			categoryDatabase: "データベース",
			categoryWeb: "Web・言語",
			categoryTools: "開発ツール",
			categoryDesign: "デザイン・BaaS"
		}
	};

	function applyTechStackTranslations(lang) {
		const t = translations[lang] || translations.en;
		document.querySelectorAll('.techstack-section [data-i18n]').forEach(el => {
			const key = el.getAttribute('data-i18n');
			if (t[key]) {
				el.innerHTML = t[key];
			}
		});
	}

	// Apply on load with current language
	function init() {
		const lang = window.GashiLang?.get() || 'en';
		applyTechStackTranslations(lang);
	}

	// Listen for language changes
	window.addEventListener('langChange', (e) => {
		applyTechStackTranslations(e.detail.lang);
	});

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', init);
	} else {
		init();
	}
})();
</script>

<style>
.techstack-section {
	padding: 6rem 2rem;
	background: #0f0a1a;
}

.techstack-container {
	max-width: 1200px;
	margin: 0 auto;
}

.section-title {
	font-size: 2.5rem;
	font-weight: 700;
	color: #fff;
	text-align: center;
	margin-bottom: 0.5rem;
}

.section-subtitle {
	color: rgba(255, 255, 255, 0.6);
	text-align: center;
	margin-bottom: 3rem;
}

.techstack-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	gap: 2rem;
}

.techstack-category {
	background: linear-gradient(135deg, rgba(26, 16, 51, 0.6) 0%, rgba(15, 10, 26, 0.6) 100%);
	border: 1px solid rgba(124, 58, 237, 0.15);
	border-radius: 1rem;
	padding: 1.5rem;
	transition: all 0.3s ease;
}

.techstack-category:hover {
	border-color: rgba(124, 58, 237, 0.4);
	box-shadow: 0 10px 30px rgba(124, 58, 237, 0.1);
}

.category-title {
	font-size: 1rem;
	font-weight: 600;
	color: #a78bfa;
	margin-bottom: 1rem;
	text-transform: uppercase;
	letter-spacing: 0.5px;
}

.tech-icons {
	display: flex;
	flex-wrap: wrap;
	gap: 1rem;
}

.tech-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 0.5rem;
	transition: transform 0.2s ease;
}

.tech-item:hover {
	transform: translateY(-3px);
}

.tech-item img {
	width: 48px;
	height: 48px;
	border-radius: 8px;
}

.tech-item span {
	font-size: 0.75rem;
	color: rgba(255, 255, 255, 0.7);
	text-align: center;
}

@media (max-width: 768px) {
	.techstack-section {
		padding: 4rem 1rem;
	}

	.section-title {
		font-size: 2rem;
	}

	.techstack-grid {
		grid-template-columns: 1fr;
	}

	.tech-item img {
		width: 40px;
		height: 40px;
	}
}
</style>
