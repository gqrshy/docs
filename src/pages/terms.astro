			padding: 0.5rem 0;
			padding-left: 1rem;
			color: rgba(255, 255, 255, 0.6);
			font-size: 0.9rem;
			border-left: 2px solid rgba(124, 58, 237, 0.2);
			transition: all 0.2s;
		}

		.toc-link:hover {
			color: #a78bfa;
			border-left-color: rgba(124, 58, 237, 0.5);
		}

		.toc-link.active {
			color: #a78bfa;
			border-left-color: #7c3aed;
			background: rgba(124, 58, 237, 0.1);
		}

		/* Content */
		.terms-content {
			max-width: 900px;
		}

		.terms-section {
			margin-bottom: 4rem;
			padding-bottom: 3rem;
			border-bottom: 1px solid rgba(124, 58, 237, 0.1);
		}

		.terms-section.final {
			border-bottom: none;
		}

		.section-header {
			display: flex;
			align-items: center;
			gap: 1rem;
			margin-bottom: 1.5rem;
		}

		.section-icon {
			font-size: 1.5rem;
			width: 48px;
			height: 48px;
			display: flex;
			align-items: center;
			justify-content: center;
			background: rgba(124, 58, 237, 0.15);
			border-radius: 12px;
		}

		.section-icon.permitted {
			background: rgba(34, 197, 94, 0.15);
		}

		.section-icon.prohibited {
			background: rgba(239, 68, 68, 0.15);
		}

		.section-header h2 {
			font-size: 1.75rem;
			font-weight: 600;
			color: #fff;
		}

		.section-intro {
			color: rgba(255, 255, 255, 0.7);
			margin-bottom: 1.5rem;
		}

		/* Info Cards */
		.info-card {
			background: rgba(26, 16, 51, 0.5);
			border: 1px solid rgba(124, 58, 237, 0.2);
			border-radius: 12px;
			padding: 1.5rem;
			margin-bottom: 1.5rem;
		}

		.info-card h3, .info-card h4 {
			color: #fff;
			margin-bottom: 1rem;
		}

		.info-grid {
			display: grid;
			gap: 1rem;
		}

		.info-item {
			display: flex;
			justify-content: space-between;
			padding: 0.75rem 0;
			border-bottom: 1px solid rgba(124, 58, 237, 0.1);
		}

		.info-item:last-child {
			border-bottom: none;
		}

		.info-label {
			color: rgba(255, 255, 255, 0.5);
		}

		.info-value {
			color: rgba(255, 255, 255, 0.8);
		}

		.info-value.highlight {
			color: #a78bfa;
		}

		.info-row {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
			gap: 1rem;
			margin-bottom: 1.5rem;
		}

		.info-card.small {
			text-align: center;
		}

		.info-card.half {
			margin-bottom: 0;
		}

		.price {
			font-size: 2rem;
			font-weight: 700;
			color: #fff;
		}

		.price span {
			font-size: 1rem;
			color: rgba(255, 255, 255, 0.5);
		}

		.payment-method, .delivery {
			font-size: 1.1rem;
			font-weight: 600;
			color: #fff;
		}

		.note {
			font-size: 0.85rem;
			color: rgba(255, 255, 255, 0.5);
			margin-top: 0.5rem;
		}

		/* Warning/Danger Boxes */
		.warning-box {
			display: flex;
			gap: 1rem;
			background: rgba(234, 179, 8, 0.1);
			border: 1px solid rgba(234, 179, 8, 0.3);
			border-radius: 12px;
			padding: 1.25rem;
		}

		.warning-icon {
			font-size: 1.5rem;
		}

		.warning-box strong {
			color: #fbbf24;
		}

		.warning-box p {
			color: rgba(255, 255, 255, 0.7);
			margin-top: 0.25rem;
			font-size: 0.9rem;
		}

		.danger-box {
			background: rgba(239, 68, 68, 0.1);
			border: 1px solid rgba(239, 68, 68, 0.3);
			border-radius: 12px;
			padding: 1.25rem;
			text-align: center;
			color: #f87171;
		}

		/* Permit Grid */
		.permit-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
			gap: 1rem;
			margin-bottom: 1.5rem;
		}

		.permit-card {
			background: rgba(34, 197, 94, 0.1);
			border: 1px solid rgba(34, 197, 94, 0.2);
			border-radius: 12px;
			padding: 1.25rem;
			text-align: center;
		}

		.permit-icon {
			font-size: 2rem;
			margin-bottom: 0.5rem;
		}

		.permit-card h4 {
			color: #4ade80;
			font-size: 0.95rem;
			margin-bottom: 0.25rem;
		}

		.permit-card p {
			color: rgba(255, 255, 255, 0.6);
			font-size: 0.85rem;
		}

		.license-note {
			background: rgba(124, 58, 237, 0.1);
			border-left: 3px solid #7c3aed;
			padding: 1rem 1.25rem;
			border-radius: 0 8px 8px 0;
		}

		/* Prohibited */
		.prohibited-category {
			margin-bottom: 1.5rem;
		}

		.prohibited-category h3 {
			color: #f87171;
			font-size: 1.1rem;
			margin-bottom: 0.75rem;
		}

		.prohibited-list {
			list-style: none;
		}

		.prohibited-list li {
			position: relative;
			padding-left: 1.5rem;
			margin-bottom: 0.5rem;
			color: rgba(255, 255, 255, 0.7);
		}

		.prohibited-list li::before {
			content: '√ó';
			position: absolute;
			left: 0;
			color: #ef4444;
			font-weight: bold;
		}

		/* Standard Lists */
		.standard-list {
			list-style: none;
			margin-bottom: 1.5rem;
		}

		.standard-list li {
			position: relative;
			padding-left: 1.5rem;
			margin-bottom: 0.5rem;
			color: rgba(255, 255, 255, 0.7);
		}

		.standard-list li::before {
			content: '‚Ä¢';
			position: absolute;
			left: 0;
			color: #7c3aed;
		}

		.compact-list {
			list-style: none;
		}

		.compact-list li {
			position: relative;
			padding-left: 1rem;
			margin-bottom: 0.4rem;
			color: rgba(255, 255, 255, 0.7);
			font-size: 0.9rem;
		}

		.compact-list li::before {
			content: '‚Äì';
			position: absolute;
			left: 0;
			color: rgba(255, 255, 255, 0.4);
		}

		/* Legal Box */
		.legal-box {
			background: rgba(15, 10, 26, 0.8);
			border: 1px solid rgba(124, 58, 237, 0.2);
			border-radius: 12px;
			padding: 1.5rem;
			margin-bottom: 1.5rem;
			font-family: 'Courier New', monospace;
		}

		.legal-box p {
			color: rgba(255, 255, 255, 0.8);
			margin-bottom: 1rem;
		}

		.legal-box ul {
			list-style: none;
			margin-left: 1rem;
		}

		.legal-box li {
			color: rgba(255, 255, 255, 0.6);
			margin-bottom: 0.25rem;
		}

		.legal-box li::before {
			content: '‚Ä∫ ';
			color: #7c3aed;
		}

		.liability-cap {
			background: rgba(124, 58, 237, 0.15);
			border-radius: 8px;
			padding: 1rem 1.5rem;
			text-align: center;
			color: #a78bfa;
		}

		/* No Refund Box */
		.no-refund-box {
			background: rgba(239, 68, 68, 0.1);
			border: 1px solid rgba(239, 68, 68, 0.2);
			border-radius: 12px;
			padding: 1.25rem;
		}

		.no-refund-box h4 {
			color: #f87171;
			margin-bottom: 0.75rem;
		}

		.no-refund-grid {
			display: flex;
			flex-wrap: wrap;
			gap: 0.5rem;
		}

		.no-refund-grid span {
			background: rgba(239, 68, 68, 0.2);
			color: rgba(255, 255, 255, 0.7);
			padding: 0.25rem 0.75rem;
			border-radius: 20px;
			font-size: 0.85rem;
		}

		/* Privacy */
		.privacy-note {
			background: rgba(34, 197, 94, 0.1);
			border: 1px solid rgba(34, 197, 94, 0.2);
			border-radius: 12px;
			padding: 1.25rem;
			margin-bottom: 1.5rem;
		}

		.privacy-note strong {
			color: #4ade80;
		}

		.privacy-note p {
			color: rgba(255, 255, 255, 0.6);
			margin-top: 0.5rem;
			font-size: 0.9rem;
		}

		.dependency-grid {
			display: flex;
			flex-wrap: wrap;
			gap: 0.5rem;
			margin: 1rem 0;
		}

		.dependency-grid span {
			background: rgba(124, 58, 237, 0.15);
			color: rgba(255, 255, 255, 0.7);
			padding: 0.35rem 0.75rem;
			border-radius: 6px;
			font-size: 0.85rem;
		}

		/* Dispute Steps */
		.dispute-steps {
			background: rgba(26, 16, 51, 0.5);
			border: 1px solid rgba(124, 58, 237, 0.2);
			border-radius: 12px;
			padding: 1.5rem;
			margin-top: 1.5rem;
		}

		.dispute-steps h4 {
			color: #fff;
			margin-bottom: 1rem;
		}

		.steps {
			display: flex;
			gap: 1rem;
			flex-wrap: wrap;
		}

		.step {
			display: flex;
			align-items: center;
			gap: 0.75rem;
			flex: 1;
			min-width: 150px;
		}

		.step-num {
			width: 32px;
			height: 32px;
			background: linear-gradient(135deg, #7c3aed, #9333ea);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			font-weight: 600;
			color: #fff;
			font-size: 0.9rem;
		}

		.step span:last-child {
			color: rgba(255, 255, 255, 0.8);
		}

		/* Contact Grid */
		.contact-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
			gap: 1rem;
			margin-top: 1.5rem;
		}

		.contact-card {
			display: flex;
			align-items: center;
			gap: 1rem;
			background: rgba(26, 16, 51, 0.5);
			border: 1px solid rgba(124, 58, 237, 0.2);
			border-radius: 12px;
			padding: 1.25rem;
			transition: all 0.2s;
		}

		.contact-card:hover {
			border-color: #7c3aed;
			transform: translateY(-2px);
		}

		.contact-icon {
			font-size: 1.5rem;
		}

		.contact-info {
			display: flex;
			flex-direction: column;
		}

		.contact-label {
			font-size: 0.8rem;
			color: rgba(255, 255, 255, 0.5);
		}

		.contact-value {
			color: #fff;
			font-weight: 500;
		}

		/* Final Notes */
		.final-notes {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
			gap: 1.5rem;
			margin-bottom: 2rem;
		}

		.final-item {
			background: rgba(26, 16, 51, 0.3);
			border-radius: 12px;
			padding: 1.25rem;
		}

		.final-item h4 {
			color: #fff;
			margin-bottom: 0.5rem;
		}

		.final-item p {
			color: rgba(255, 255, 255, 0.6);
			font-size: 0.9rem;
		}

		.acceptance-box {
			background: linear-gradient(135deg, rgba(34, 197, 94, 0.15) 0%, rgba(124, 58, 237, 0.15) 100%);
			border: 1px solid rgba(34, 197, 94, 0.3);
			border-radius: 12px;
			padding: 1.5rem;
			text-align: center;
			margin-bottom: 2rem;
		}

		.acceptance-box strong {
			color: #4ade80;
			font-size: 1.1rem;
		}

		.acceptance-box p {
			color: rgba(255, 255, 255, 0.7);
			margin-top: 0.75rem;
		}

		.copyright {
			text-align: center;
			color: rgba(255, 255, 255, 0.4);
			font-size: 0.9rem;
			padding-top: 2rem;
			border-top: 1px solid rgba(124, 58, 237, 0.1);
		}

		/* Back to Top */
		.back-to-top {
			position: fixed;
			bottom: 2rem;
			right: 2rem;
			width: 48px;
			height: 48px;
			background: linear-gradient(135deg, #7c3aed, #9333ea);
			border: none;
			border-radius: 50%;
			color: #fff;
			cursor: pointer;
			opacity: 0;
			visibility: hidden;
			transition: all 0.3s;
			display: flex;
			align-items: center;
			justify-content: center;
			box-shadow: 0 4px 15px rgba(124, 58, 237, 0.4);
		}

		.back-to-top.visible {
			opacity: 1;
			visibility: visible;
		}

		.back-to-top:hover {
			transform: translateY(-3px);
			box-shadow: 0 6px 20px rgba(124, 58, 237, 0.5);
		}

		/* Responsive */
		@media (max-width: 992px) {
			.terms-layout {
				grid-template-columns: 1fr;
			}

			.toc {
				display: none;
			}

			.terms-hero h1 {
				font-size: 2.25rem;
			}
		}

		@media (max-width: 576px) {
			.terms-hero {
				padding: 6rem 1rem 3rem;
			}

			.terms-hero h1 {
				font-size: 1.75rem;
			}

			.hero-meta {
				flex-direction: column;
				gap: 0.5rem;
			}

			.terms-layout {
				padding: 2rem 1rem;
			}

			.section-header h2 {
				font-size: 1.4rem;
			}

			.info-row {
				grid-template-columns: 1fr;
			}

			.steps {
				flex-direction: column;
			}
		}
	</style>
</body>
