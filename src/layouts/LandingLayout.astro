---
import LoadingScreen from '../components/LoadingScreen.astro';
import CustomNav from '../components/CustomNav.astro';
import WavyBackground from '../components/WavyBackground.astro';
import HeroSection from '../components/HeroSection.astro';
import ProductsSection from '../components/ProductsSection.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description } = Astro.props;
const siteUrl = 'https://gashistudios.site';
const pageUrl = new URL(Astro.url.pathname, siteUrl).href;
const metaDescription = description || 'GashiStudios - A community creating high-quality Mods for Cobblemon';

// Static OG image (logo)
const ogImage = `${siteUrl}/gashistudios.png`;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="icon" type="image/png" href="/gashistudios.png" />
	<meta name="description" content={metaDescription} />
	<title>{title}</title>

	<!-- Open Graph / Discord Embed -->
	<meta property="og:type" content="website" />
	<meta property="og:url" content={pageUrl} />
	<meta property="og:title" content={title} />
	<meta property="og:description" content={metaDescription} />
	<meta property="og:image" content={ogImage} />
	<meta property="og:site_name" content="GashiStudios" />

	<!-- Twitter Card (summary = small thumbnail on left) -->
	<meta name="twitter:card" content="summary" />
	<meta name="twitter:title" content={title} />
	<meta name="twitter:description" content={metaDescription} />
	<meta name="twitter:image" content={ogImage} />

	<!-- Theme Color (Discord embed sidebar) -->
	<meta name="theme-color" content="#7c6c9a" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Lilita+One&display=swap" rel="stylesheet">
	<style is:global>
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		html {
			scroll-behavior: smooth;
		}

		body {
			font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
			background: linear-gradient(135deg, #e8e0f0 0%, #d4c8e8 50%, #c8d4f0 100%);
			color: #4a4a5a;
			line-height: 1.6;
			overflow-x: clip; /* 水平スクロールバー防止、垂直方向はvisible */
		}

		a {
			color: inherit;
		}

		img {
			max-width: 100%;
			height: auto;
			user-select: none;
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			-webkit-user-drag: none;
			-webkit-touch-callout: none;
			pointer-events: none;
			cursor: default;
		}

		/* Allow pointer events on clickable images (inside links) */
		a img, button img {
			pointer-events: auto;
		}

		/* Disable text selection cursor on clickable elements */
		button, a, .product-card, .submit-btn {
			user-select: none;
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			cursor: pointer;
		}

		svg {
			user-select: none;
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			-webkit-user-drag: none;
			pointer-events: none;
			cursor: default;
		}

		/* Allow pointer events on clickable SVGs (inside links/buttons) */
		a svg, button svg {
			pointer-events: auto;
		}

		/* Prevent selection highlight on images and decorative elements */
		img::selection,
		svg::selection,
		.character-image::selection,
		.acrylic-panel::selection,
		.blob::selection,
		.deco-box::selection {
			background: transparent;
		}

		/* Prevent caret/cursor appearing in empty or decorative areas */
		.hero-visual,
		.acrylic-panel,
		.blob,
		.depth-wave,
		.panel-star,
		.character-image {
			user-select: none;
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			caret-color: transparent;
		}

		/* ===== Jelly Animation System ===== */
		/* Hover in: expand → shrink slightly → expand to final */
		@keyframes jellyIn {
			0% { transform: var(--jelly-base, scale(1)); }
			40% { transform: var(--jelly-overshoot, scale(1.12)); }
			70% { transform: var(--jelly-undershoot, scale(1.02)); }
			100% { transform: var(--jelly-final, scale(1.06)); }
		}

		/* Hover out: expand → shrink → expand slightly → return */
		@keyframes jellyOut {
			0% { transform: var(--jelly-final, scale(1.06)); }
			25% { transform: var(--jelly-out-overshoot, scale(1.1)); }
			50% { transform: var(--jelly-out-undershoot, scale(0.97)); }
			75% { transform: var(--jelly-out-bounce, scale(1.02)); }
			100% { transform: var(--jelly-base, scale(1)); }
		}

		/* Button/Card variants with translateY */
		@keyframes jellyInUp {
			0% { transform: translateY(0) scale(1); }
			40% { transform: translateY(-6px) scale(1.08); }
			70% { transform: translateY(-2px) scale(1.01); }
			100% { transform: translateY(-4px) scale(1.04); }
		}

		@keyframes jellyOutDown {
			0% { transform: translateY(-4px) scale(1.04); }
			25% { transform: translateY(-6px) scale(1.06); }
			50% { transform: translateY(2px) scale(0.98); }
			75% { transform: translateY(-1px) scale(1.01); }
			100% { transform: translateY(0) scale(1); }
		}

		/* Card variants with larger movement */
		@keyframes jellyInCard {
			0% { transform: translateY(0) scale(1); }
			40% { transform: translateY(-10px) scale(1.05); }
			70% { transform: translateY(-4px) scale(1.01); }
			100% { transform: translateY(-6px) scale(1.02); }
		}

		@keyframes jellyOutCard {
			0% { transform: translateY(-6px) scale(1.02); }
			25% { transform: translateY(-8px) scale(1.04); }
			50% { transform: translateY(3px) scale(0.99); }
			75% { transform: translateY(-1px) scale(1.005); }
			100% { transform: translateY(0) scale(1); }
		}

		/* SNS Icons - Playful pop/wobble effect */
		@keyframes snsPopIn {
			0% { transform: scale(1) rotate(0deg); }
			25% { transform: scale(1.2) rotate(-8deg); }
			50% { transform: scale(1.15) rotate(5deg); }
			75% { transform: scale(1.18) rotate(-2deg); }
			100% { transform: scale(1.15) rotate(0deg); }
		}

		@keyframes snsPopOut {
			0% { transform: scale(1.15) rotate(0deg); }
			20% { transform: scale(1.2) rotate(5deg); }
			45% { transform: scale(0.95) rotate(-3deg); }
			70% { transform: scale(1.02) rotate(1deg); }
			100% { transform: scale(1) rotate(0deg); }
		}

		/* Footer buttons - Soft float/glow effect */
		@keyframes floatIn {
			0% { transform: translateY(0) scale(1); filter: brightness(1); }
			30% { transform: translateY(-5px) scale(1.05); filter: brightness(1.1); }
			60% { transform: translateY(-2px) scale(1.02); filter: brightness(1.05); }
			100% { transform: translateY(-3px) scale(1.03); filter: brightness(1.08); }
		}

		@keyframes floatOut {
			0% { transform: translateY(-3px) scale(1.03); filter: brightness(1.08); }
			30% { transform: translateY(-5px) scale(1.05); filter: brightness(1.1); }
			60% { transform: translateY(2px) scale(0.98); filter: brightness(0.98); }
			100% { transform: translateY(0) scale(1); filter: brightness(1); }
		}

		/* Product Card - Card flip/peek effect from bottom edge */
		@keyframes cardLiftIn {
			0% {
				transform: perspective(1000px) rotateX(0deg) translateY(0) translateZ(0);
			}
			40% {
				transform: perspective(1000px) rotateX(-12deg) translateY(-8px) translateZ(30px);
			}
			70% {
				transform: perspective(1000px) rotateX(-4deg) translateY(-3px) translateZ(15px);
			}
			100% {
				transform: perspective(1000px) rotateX(-6deg) translateY(-5px) translateZ(20px);
			}
		}

		@keyframes cardLiftOut {
			0% {
				transform: perspective(1000px) rotateX(-6deg) translateY(-5px) translateZ(20px);
			}
			30% {
				transform: perspective(1000px) rotateX(-10deg) translateY(-6px) translateZ(25px);
			}
			60% {
				transform: perspective(1000px) rotateX(3deg) translateY(3px) translateZ(-5px);
			}
			85% {
				transform: perspective(1000px) rotateX(-1deg) translateY(-1px) translateZ(5px);
			}
			100% {
				transform: perspective(1000px) rotateX(0deg) translateY(0) translateZ(0);
			}
		}

		/* Main container - allow decorations to overflow */
		main {
			position: relative;
			overflow: visible;
		}

		/* Seamless sections container */
		.seamless-sections {
			position: relative;
			background: linear-gradient(180deg, #e0e8ff 0%, #e4e6fc 25%, #e8e6fa 50%, #e6e4f8 75%, #dce0f8 100%);
			z-index: 1;
			overflow: visible;
		}

		/* Shared wave container - spans across Products and Contact */
		.shared-wave-container {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			pointer-events: none;
			z-index: 3;
			overflow: visible;
		}

		.depth-wave {
			position: absolute;
		}

		/* Wave 1 - Left side, through forms */
		.depth-wave-1 {
			width: 420px;
			height: 400px;
			top: 50%;
			left: 50%;
			transform: rotate(-45deg);
		}

		/* Wave 2 - Right side, through forms */
		.depth-wave-2 {
			width: 400px;
			height: 500px;
			top: 43%;
			right: 25%;
			left: auto;
			transform: rotate(23deg) scaleX(-1);
		}

		@media (max-width: 900px) {
			.depth-wave-1 {
				width: 320px;
				height: 600px;
				left: 2%;
			}
			.depth-wave-2 {
				width: 300px;
				height: 550px;
				right: 2%;
			}
		}

		@media (max-width: 600px) {
			.depth-wave-1 {
				width: 220px;
				height: 400px;
				left: -5%;
				top: 40%;
			}
			.depth-wave-2 {
				width: 200px;
				height: 380px;
				right: -5%;
				top: 30%;
			}
		}
	</style>
</head>
<body>
	<LoadingScreen />
	<WavyBackground />
	<CustomNav />
	<main>
		<HeroSection />
		<!-- Seamless container for Products + Contact with shared wave decorations -->
		<div class="seamless-sections">
			<!-- Main bold wave decoration - spans across both sections -->
			<div class="shared-wave-container">
				<!-- Wave 1 - Left side -->
				<svg class="depth-wave depth-wave-1" viewBox="-41 -41 573 813" fill="none">
					<path d="M449.03 24.6557C366.929 37.1979 339.739 82.6143 367.461 160.905C395.183 239.196 367.993 284.612 285.892 297.154C203.79 309.697 176.601 355.113 204.322 433.404C232.044 511.695 204.854 557.111 122.753 569.653C40.6517 582.195 13.4619 627.612 41.1837 705.903"
						stroke="#4C75F2" stroke-width="82" stroke-linecap="round"/>
				</svg>
				<!-- Wave 2 - Right side -->
				<svg class="depth-wave depth-wave-2" viewBox="-41 -41 573 813" fill="none">
					<path d="M449.03 24.6557C366.929 37.1979 339.739 82.6143 367.461 160.905C395.183 239.196 367.993 284.612 285.892 297.154C203.79 309.697 176.601 355.113 204.322 433.404C232.044 511.695 204.854 557.111 122.753 569.653C40.6517 582.195 13.4619 627.612 41.1837 705.903"
						stroke="#4C75F2" stroke-width="82" stroke-linecap="round"/>
				</svg>
			</div>
			<ProductsSection />
			<ContactSection />
		</div>
	</main>
	<Footer />
	<LanguageSwitcher />
</body>
</html>
