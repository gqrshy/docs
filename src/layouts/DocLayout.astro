---
import { ViewTransitions } from 'astro:transitions';
import CustomNav from '../components/CustomNav.astro';
import DocSidebar from '../components/DocSidebar.astro';
import TableOfContents from '../components/TableOfContents.astro';

interface Props {
	title: string;
	description?: string;
	headings?: { depth: number; slug: string; text: string }[];
	ogImage?: string;
}

const { title, description, headings = [], ogImage } = Astro.props;
const siteUrl = 'https://gashistudios.site';
const pageUrl = new URL(Astro.url.pathname, siteUrl).href;

// Static OG image (logo)
const defaultOgImage = `${siteUrl}/gashistudios.png`;
const finalOgImage = ogImage ? `${siteUrl}${ogImage}` : defaultOgImage;
---

<!DOCTYPE html>
<html lang="ja">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="icon" type="image/png" href="/gashistudios.png" />
	<meta name="description" content={description || `${title} - GashiStudios Documentation`} />
	<title>{title} - GashiStudios</title>

	<!-- Open Graph / Discord Embed -->
	<meta property="og:type" content="website" />
	<meta property="og:url" content={pageUrl} />
	<meta property="og:title" content={`${title} - GashiStudios`} />
	<meta property="og:description" content={description || `${title} - GashiStudios Documentation`} />
	<meta property="og:image" content={finalOgImage} />
	<meta property="og:site_name" content="GashiStudios" />

	<!-- Twitter Card (summary = small thumbnail on left) -->
	<meta name="twitter:card" content="summary" />
	<meta name="twitter:title" content={`${title} - GashiStudios`} />
	<meta name="twitter:description" content={description || `${title} - GashiStudios Documentation`} />
	<meta name="twitter:image" content={finalOgImage} />

	<!-- Theme Color (Discord embed sidebar) -->
	<meta name="theme-color" content="#7c6c9a" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Lilita+One&display=swap" rel="stylesheet">
	<ViewTransitions />
</head>
<body>
	<CustomNav />

	<DocSidebar />

	<div class="doc-wrapper">
		<main class="doc-main">
			<article class="doc-content" transition:animate="fade">
				<header class="doc-header">
					<h1 class="animated-doc-title" id="doc-title" transition:name="page-title">{title}</h1>
					{description && <p class="doc-description">{description}</p>}
				</header>
				<div class="prose">
					<slot />
				</div>
			</article>

			{headings.length > 0 && (
				<aside class="doc-toc">
					<TableOfContents headings={headings} />
				</aside>
			)}
		</main>

		<footer class="doc-footer">
			<div class="footer-container">
				<div class="footer-links">
					<div class="footer-column">
						<h4>Products</h4>
						<a href="/docs/cobbleranked/">CobbleRanked</a>
						<a href="/docs/gashilibs/">GashiLibs</a>
						<a href="/docs/maillib/">MailLib</a>
					</div>
					<div class="footer-column">
						<h4>Legal</h4>
						<a href="/terms">Terms & Conditions</a>
					</div>
					<div class="footer-column">
						<h4>Community</h4>
						<a href="https://discord.gg/VVVvBTqqyP" target="_blank">Discord</a>
						<a href="https://github.com/gqrshy" target="_blank">GitHub</a>
					</div>
				</div>
			</div>
			<div class="footer-bottom">
				<p>&copy; 2026 GashiStudios. All rights reserved.</p>
				<p class="footer-disclaimer">Not affiliated with Microsoft, Mojang AB, or Minecraft.</p>
			</div>
		</footer>
	</div>

	<script is:inline>
		// Animated title - split into characters (runs on every page load including View Transitions)
		(function initDocPage() {
			function animateTitle() {
				const titleEl = document.getElementById('doc-title');
				if (!titleEl || titleEl.dataset.animated === 'true') return;

				const text = titleEl.textContent || '';
				titleEl.innerHTML = '';
				titleEl.dataset.animated = 'true';

				// Create character spans
				[...text].forEach((char, i) => {
					const span = document.createElement('span');
					span.className = char === ' ' ? 'title-char space' : 'title-char';
					span.textContent = char === ' ' ? '\u00A0' : char;
					span.style.setProperty('--char-index', i);
					titleEl.appendChild(span);
				});

				// Trigger animation after a brief delay
				setTimeout(() => {
					const chars = titleEl.querySelectorAll('.title-char');
					chars.forEach((char, i) => {
						setTimeout(() => {
							char.classList.add('visible');
						}, i * 40);
					});
				}, 150);
			}

			// Run now
			animateTitle();

			// Also run after View Transitions (only register once)
			if (!window._docTitleAnimRegistered) {
				window._docTitleAnimRegistered = true;
				document.addEventListener('astro:page-load', animateTitle);
			}
		})();

		// Copy code button functionality
		document.querySelectorAll('pre').forEach(pre => {
			const button = document.createElement('button');
			button.className = 'copy-btn';
			button.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>';
			button.addEventListener('click', async () => {
				const code = pre.querySelector('code')?.textContent || '';
				await navigator.clipboard.writeText(code);
				button.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>';
				button.classList.add('copied');
				setTimeout(() => {
					button.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>';
					button.classList.remove('copied');
				}, 2000);
			});
			pre.style.position = 'relative';
			pre.appendChild(button);
		});

		// Intersection Observer for scroll animations
		const observerOptions = {
			threshold: 0.1,
			rootMargin: '0px 0px -50px 0px'
		};

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					entry.target.classList.add('animate-in');
				}
			});
		}, observerOptions);

		// Observe elements for scroll animations
		document.querySelectorAll('.prose h2, .prose h3, .prose details, .prose pre, .prose table, .prose blockquote').forEach(el => {
			el.classList.add('scroll-animate');
			observer.observe(el);
		});

		// Image Lightbox functionality (singleton pattern with event delegation)
		(function initLightbox() {
			// Only create lightbox once
			let lightbox = document.querySelector('.lightbox');
			if (!lightbox) {
				lightbox = document.createElement('div');
				lightbox.className = 'lightbox';
				lightbox.innerHTML = `
					<div class="lightbox-backdrop"></div>
					<div class="lightbox-content">
						<img class="lightbox-image" src="" alt="" />
						<button class="lightbox-close" aria-label="Close">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<line x1="18" y1="6" x2="6" y2="18"></line>
								<line x1="6" y1="6" x2="18" y2="18"></line>
							</svg>
						</button>
					</div>
				`;
				document.body.appendChild(lightbox);

				const backdrop = lightbox.querySelector('.lightbox-backdrop');
				const closeBtn = lightbox.querySelector('.lightbox-close');

				function closeLightbox() {
					lightbox.classList.remove('active');
					document.body.style.overflow = '';
				}

				// Close handlers (only register once)
				backdrop.addEventListener('click', closeLightbox);
				closeBtn.addEventListener('click', closeLightbox);
				document.addEventListener('keydown', (e) => {
					if (e.key === 'Escape' && lightbox.classList.contains('active')) {
						closeLightbox();
					}
				});

				// Event delegation - handle clicks on any .prose img
				document.addEventListener('click', (e) => {
					const img = e.target.closest('.prose img');
					if (img && !lightbox.classList.contains('active')) {
						e.preventDefault();
						e.stopPropagation();
						const lightboxImg = lightbox.querySelector('.lightbox-image');
						lightboxImg.src = img.src;
						lightboxImg.alt = img.alt || '';
						lightbox.classList.add('active');
						document.body.style.overflow = 'hidden';
					}
				});
			}

			// Style images (run on every page load)
			function styleImages() {
				document.querySelectorAll('.prose img').forEach(img => {
					img.style.cursor = 'zoom-in';
				});
			}
			styleImages();

			// Re-style on View Transitions
			if (!window._lightboxRegistered) {
				window._lightboxRegistered = true;
				document.addEventListener('astro:page-load', styleImages);
			}
		})();
	</script>

	<style is:global>
		/* ===== CSS Custom Properties - Pastel Theme ===== */
		:root {
			--color-primary: #7c6c9a;
			--color-primary-light: #9a8ab0;
			--color-primary-lighter: #b0a0c8;
			--color-bg: #edecff;
			--color-bg-alt: #e8e4ff;
			--color-bg-card: rgba(255, 255, 255, 0.7);
			--color-text: #454141;
			--color-text-muted: #6b5b7a;
			--color-border: rgba(124, 108, 154, 0.2);
			--color-accent-pink: #ff4080;
			--ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
			--ease-out-back: cubic-bezier(0.34, 1.56, 0.64, 1);
			--ease-spring: cubic-bezier(0.87, 0.05, 0.02, 0.97);
		}

		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		html {
			scroll-behavior: smooth;
			scroll-padding-top: 80px;
		}

		/* Hide caret during View Transitions */
		::view-transition-old(*),
		::view-transition-new(*) {
			caret-color: transparent;
		}

		body {
			font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
			background: linear-gradient(135deg, #edecff 0%, #e8e4ff 50%, #e0e8ff 100%);
			color: var(--color-text);
			line-height: 1.7;
			overflow-x: hidden;
		}

		/* ===== View Transitions ===== */
		::view-transition-old(root),
		::view-transition-new(root) {
			animation-duration: 0.4s;
			animation-timing-function: var(--ease-out-expo);
		}

		::view-transition-old(root) {
			animation-name: fade-out;
		}

		::view-transition-new(root) {
			animation-name: fade-in;
		}

		@keyframes fade-out {
			from { opacity: 1; transform: translateY(0); }
			to { opacity: 0; transform: translateY(-10px); }
		}

		@keyframes fade-in {
			from { opacity: 0; transform: translateY(10px); }
			to { opacity: 1; transform: translateY(0); }
		}

		/* Page title morph transition */
		::view-transition-old(page-title),
		::view-transition-new(page-title) {
			animation-duration: 0.3s;
			animation-timing-function: var(--ease-out-expo);
		}

		/* ===== Layout (GitBook-inspired centered design) ===== */
		.doc-wrapper {
			margin-left: 280px;
			min-height: calc(100vh - 60px);
			padding-top: 60px;
			display: flex;
			flex-direction: column;
			position: relative;
			z-index: 1;
		}

		.doc-main {
			flex: 1;
			display: flex;
			justify-content: center;
			max-width: 100%;
			padding: 0 2rem;
		}

		.doc-content {
			flex: 0 1 800px;
			max-width: 800px;
			padding: 3rem 2rem;
			min-width: 0;
		}

		.doc-toc {
			width: 220px;
			flex-shrink: 0;
			padding: 3rem 1rem;
			position: sticky;
			top: 60px;
			height: fit-content;
			max-height: calc(100vh - 60px);
			overflow-y: auto;
			margin-left: 2rem;
		}

		/* ===== Scroll Animations ===== */
		.scroll-animate {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.6s var(--ease-out-expo), transform 0.6s var(--ease-out-expo);
		}

		.scroll-animate.animate-in {
			opacity: 1;
			transform: translateY(0);
		}

		/* Staggered animations for list items */
		.prose details.scroll-animate.animate-in {
			animation: stagger-in 0.5s var(--ease-out-back) forwards;
		}

		@keyframes stagger-in {
			from {
				opacity: 0;
				transform: translateX(-20px);
			}
			to {
				opacity: 1;
				transform: translateX(0);
			}
		}

		/* ===== Header ===== */
		.doc-header {
			margin-bottom: 2.5rem;
			padding-bottom: 1.5rem;
			border-bottom: 1px solid var(--color-border);
		}

		.doc-header h1 {
			font-size: 2.5rem;
			font-weight: 700;
			color: var(--color-text);
			margin-bottom: 0.75rem;
			display: flex;
			flex-wrap: wrap;
			align-items: baseline;
			gap: 0;
		}

		/* Animated title characters */
		.animated-doc-title .title-char {
			display: inline-block;
			opacity: 0;
			transform: translateY(20px);
			background: linear-gradient(135deg, var(--color-text) 0%, var(--color-primary) 50%, var(--color-accent-pink) 100%);
			background-size: 200% 200%;
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
			animation: gradient-shift 8s ease-in-out infinite;
			transition:
				opacity 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
				transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
		}

		.animated-doc-title .title-char.visible {
			opacity: 1;
			transform: translateY(0);
		}

		.animated-doc-title .title-char.space {
			width: 0.3em;
		}

		@keyframes gradient-shift {
			0%, 100% { background-position: 0% 50%; }
			50% { background-position: 100% 50%; }
		}

		.doc-description {
			font-size: 1.1rem;
			color: var(--color-text-muted);
			animation: fade-in-up 0.8s var(--ease-out-expo) 0.4s backwards;
		}

		@keyframes fade-in-up {
			from {
				opacity: 0;
				transform: translateY(10px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		/* ===== Prose content ===== */
		.prose h2 {
			font-size: 1.75rem;
			font-weight: 600;
			color: var(--color-text);
			margin-top: 3rem;
			margin-bottom: 1rem;
			padding-bottom: 0.5rem;
			border-bottom: 1px solid var(--color-border);
			position: relative;
		}

		.prose h2::after {
			content: '';
			position: absolute;
			bottom: -1px;
			left: 0;
			width: 60px;
			height: 3px;
			background: linear-gradient(90deg, var(--color-primary), transparent);
			border-radius: 2px;
			transition: width 0.4s var(--ease-out-expo);
		}

		.prose h2:hover::after {
			width: 120px;
		}

		.prose h3 {
			font-size: 1.35rem;
			font-weight: 600;
			color: var(--color-text);
			margin-top: 2rem;
			margin-bottom: 0.75rem;
		}

		.prose h4 {
			font-size: 1.1rem;
			font-weight: 600;
			color: var(--color-text);
			margin-top: 1.5rem;
			margin-bottom: 0.5rem;
		}

		.prose p {
			margin-bottom: 1.25rem;
			color: var(--color-text-muted);
		}

		.prose a {
			color: var(--color-primary);
			text-decoration: none;
			border-bottom: 1px solid transparent;
			background: linear-gradient(90deg, var(--color-primary), var(--color-primary-lighter));
			background-size: 0% 2px;
			background-position: 0 100%;
			background-repeat: no-repeat;
			transition: background-size 0.3s var(--ease-out-expo), color 0.2s ease;
			padding-bottom: 2px;
		}

		.prose a:hover {
			color: var(--color-primary-light);
			background-size: 100% 2px;
		}

		.prose strong {
			color: var(--color-text);
			font-weight: 600;
		}

		/* Lists */
		.prose ul, .prose ol {
			margin-bottom: 1.25rem;
			padding-left: 1.5rem;
		}

		.prose li {
			margin-bottom: 0.5rem;
			color: var(--color-text-muted);
			position: relative;
		}

		.prose li::marker {
			color: var(--color-primary);
		}

		/* ===== Code with enhanced styling ===== */
		.prose code {
			font-family: 'JetBrains Mono', monospace;
			background: rgba(124, 108, 154, 0.15);
			color: var(--color-primary);
			padding: 0.2rem 0.4rem;
			border-radius: 4px;
			font-size: 0.9em;
			transition: background 0.2s ease, transform 0.2s ease;
		}

		.prose code:hover {
			background: rgba(124, 108, 154, 0.25);
		}

		.prose pre {
			background: rgba(255, 255, 255, 0.8);
			border: 1px solid var(--color-border);
			border-radius: 0.75rem;
			padding: 1.25rem;
			overflow-x: auto;
			margin-bottom: 1.5rem;
			transition: border-color 0.3s ease, box-shadow 0.3s ease, transform 0.3s var(--ease-out-expo);
			backdrop-filter: blur(10px);
		}

		.prose pre:hover {
			border-color: rgba(124, 108, 154, 0.4);
			box-shadow: 0 8px 30px rgba(124, 108, 154, 0.15);
			transform: translateY(-2px);
		}

		.prose pre code {
			background: transparent;
			padding: 0;
			color: var(--color-text);
			font-size: 0.875rem;
			line-height: 1.6;
		}

		.prose pre code:hover {
			background: transparent;
		}

		.copy-btn {
			position: absolute;
			top: 0.75rem;
			right: 0.75rem;
			background: rgba(124, 108, 154, 0.2);
			border: none;
			border-radius: 6px;
			padding: 0.5rem;
			cursor: pointer;
			color: var(--color-text-muted);
			transition: all 0.3s var(--ease-out-back);
			display: flex;
			align-items: center;
			justify-content: center;
		}

		.copy-btn:hover {
			background: rgba(124, 108, 154, 0.35);
			color: var(--color-text);
			transform: scale(1.1);
		}

		.copy-btn.copied {
			background: rgba(34, 197, 94, 0.3);
			animation: bounce-success 0.4s var(--ease-out-back);
		}

		@keyframes bounce-success {
			0%, 100% { transform: scale(1); }
			50% { transform: scale(1.2); }
		}

		/* ===== Tables with hover effects ===== */
		.prose table {
			width: 100%;
			border-collapse: collapse;
			margin-bottom: 1.5rem;
			background: var(--color-bg-card);
			border-radius: 0.75rem;
			overflow: hidden;
			transition: box-shadow 0.3s ease;
			backdrop-filter: blur(10px);
		}

		.prose table:hover {
			box-shadow: 0 8px 30px rgba(124, 108, 154, 0.1);
		}

		.prose th {
			background: rgba(124, 108, 154, 0.15);
			color: var(--color-primary);
			font-weight: 600;
			text-align: left;
			padding: 0.875rem 1rem;
		}

		.prose td {
			padding: 0.875rem 1rem;
			border-top: 1px solid var(--color-border);
			color: var(--color-text-muted);
			transition: background 0.2s ease, transform 0.2s ease;
		}

		.prose tr {
			transition: background 0.2s ease;
		}

		.prose tbody tr:hover {
			background: rgba(124, 108, 154, 0.08);
		}

		.prose tbody tr:hover td {
			color: var(--color-text);
		}

		/* ===== Blockquotes ===== */
		.prose blockquote {
			border-left: 4px solid var(--color-primary);
			background: rgba(124, 108, 154, 0.1);
			padding: 1rem 1.5rem;
			margin: 1.5rem 0;
			border-radius: 0 0.5rem 0.5rem 0;
		}

		.prose blockquote p {
			margin-bottom: 0;
		}

		/* ===== Collapsible FAQ/Troubleshooting ===== */
		.prose details {
			margin-bottom: 0.75rem;
			background: var(--color-bg-card);
			border: 1px solid var(--color-border);
			border-radius: 0.5rem;
			overflow: hidden;
			transition: all 0.3s var(--ease-out-expo);
			backdrop-filter: blur(10px);
		}

		.prose details:hover {
			border-color: rgba(124, 108, 154, 0.4);
			box-shadow: 0 4px 20px rgba(124, 108, 154, 0.1);
		}

		.prose details[open] {
			background: rgba(255, 255, 255, 0.9);
		}

		.prose details summary {
			padding: 1rem 1.25rem;
			cursor: pointer;
			display: flex;
			align-items: center;
			gap: 0.75rem;
			list-style: none;
			user-select: none;
			transition: all 0.2s ease;
		}

		.prose details summary::-webkit-details-marker {
			display: none;
		}

		.prose details summary::before {
			content: '';
			width: 8px;
			height: 8px;
			border-right: 2px solid var(--color-text-muted);
			border-bottom: 2px solid var(--color-text-muted);
			transform: rotate(-45deg);
			transition: transform 0.3s var(--ease-out-back), border-color 0.2s ease;
			flex-shrink: 0;
		}

		.prose details[open] summary::before {
			transform: rotate(45deg);
		}

